<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
					
	
	<script>
		function mostrar_edicion_rfc()
		{			
			$("#edited_mx_rfc").val($("#rfc").val());
			
			$('#edicion_rfc').show('slow');
			$(".cajaRFCCURP.rfc").hide();
			$(".link_editar_rfc").hide();
			
			$("#edited_mx_rfc").trigger("focus");
			
		}
		
		function guardar_edicion_RFC()
		{
			var edited_mx_rfc = $("#edited_mx_rfc").val().trim();
			
			if(edited_mx_rfc.length > 0)
			{							
				$("#input_listener_edited_mx_rfc").val(edited_mx_rfc).click();
			}				
			$(".cajaRFCCURP.rfc").show();
			$(".link_editar_rfc").show();
			
		}
		
		function complete_edicion_RFC()
		{
			$('#edicion_rfc').hide('slow');
			$(".cajaRFCCURP.rfc").show();
			$(".link_editar_rfc").show();
			
		}
		function cancelar_edicion_RFC() {
			$('#edicion_rfc').hide('slow')
			$(".cajaRFCCURP.rfc").show();
			$(".link_editar_rfc").show();
		  
			
		}
	</script>			
				
	<div onclick = "mostrar_edicion_rfc();" class = "link_editar_rfc">		  		  
		<p><i class="fa fa-pencil-square-o"></i>Editar</p>		
	</div>
	
	<div id = "edicion_rfc" style = "display:none">
		<div>
			<h:inputText id = "edited_mx_rfc" styleClass = "elementAddres1 mayus"> 
					<p:ajax event="keyup" onstart="mayusculas();"/>
			</h:inputText>									 				 									
		</div>										 
		
		<div class = "container_botones_editar_rfc">
		
		
			
			<div class   = "callActionMedium btnGris"  onclick = "cancelar_edicion_RFC();">Cancelar</div>
		
			<div class = "callActionMedium btnVerde-2" onclick = "guardar_edicion_RFC();">Guardar</div>
				 	
			<div style = "display: none"> 
				<h:inputText  id    = "input_listener_edited_mx_rfc" 
						      value = "#{basicData.edited_mx_rfc}">
					<p:ajax event      = "click" 
							listener   = "#{basicData.listener_edited_mx_rfc}"
							oncomplete = "complete_edicion_RFC();"
							update = "rfc"/>
				</h:inputText>
			</div>
		</div>
	</div>				
				
</ui:composition>				