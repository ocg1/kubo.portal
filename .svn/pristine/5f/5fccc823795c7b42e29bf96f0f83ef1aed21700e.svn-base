<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	<h:panelGroup rendered = "false">		
		<!-- <div class="#{sessionBean.area=='M'?'profileControlTable':'profile'}" id="chat" style="display: none;"> -->
		<div class="profileControlTable" id="chat" style="display: none;">
		<div class="centerPosition">
		<h:panelGroup id="pnlQuestionsA">
			<p><strong class="orange">Preguntas y respuestas (#{summaryRequest.numberQuest})</strong></p>
		</h:panelGroup>
			<div id="#chatContainer">
			<h:panelGroup id="pnlQuestionsB">
				<ui:repeat var="listPublicForum" value="#{summaryRequest.listPublicForum}">
					<div class="leftMsg chatMsg">
						<p>#{listPublicForum.proyectQuestion.question}</p>
					
						<div class="avatarContainer">
							<img class="avatar" alt="" src="../resources/img/inversionista.jpg" />
							<a title="" href="#"><!-- vac'io --></a>
						</div><!-- avatarContainer -->
					
						<img class="peakLeft peak" alt="" src="../resources#{summaryRequest.imageSesion}" />
					</div><!-- leftMsg -->
					
					<div class="rightMsg chatMsg">
						<h:inputText  immediate="true" readonly="#{summaryRequest.enableDisable}" valueChangeListener="#{summaryRequest.updatePublicForum}" style="border:none; background-color:#C8C4B7;" value="#{listPublicForum.answer}">
						  <f:attribute name="publicForumID" value="#{listPublicForum.publicForumPK.public_forum_id}"></f:attribute>
						  <p:ajax event="blur"></p:ajax>
						</h:inputText>
						
						<div class="avatarContainer">
							<img class="avatar" alt="" src="../resources#{summaryRequest.imagenProspecto}" />
							<a title="#{summaryRequest.alias}" href="#">#{summaryRequest.alias}</a>
						</div><!-- avatarContainer -->
					
						<img class="peakRight peak" alt="" src="../resources/img/path6336.png" />
						
					</div><!-- rightMsg -->
				</ui:repeat>
				</h:panelGroup>
				<h:outputText escape="false" value="#{summaryRequest.createButtonQuestion}"></h:outputText>
			</div><!-- chatContainer -->
			</div>
		</div>
	</h:panelGroup>				
</ui:composition>				