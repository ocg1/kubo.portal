	 <title>kubo.financiero | Restablecer contraseña</title>				
     <meta name="Description" content="Aquí puedes restablecer tu  contraseña en caso de olvido"/>
		
	</h:head>
	<!-- <h:body onload="javascript:cambiaReloj();"> -->
	<h:body styleClass="clBody">
		
		<div id="header" style="width: 100%; margin: 0px;">
			<ui:include src="templates/headContenido.xhtml" />
		</div>
	<h:form prependId = "false">
		<div class = "contPR" style="position: relative;margin-right: 0px;">
			<div class = "contFrm bloque_forgotpass" style="padding: 5px; overflow: hidden; ">
			
				<div style = "width: 100%; background-color: #FFFFFF; padding-top: 0px !important; margin-top: 0px !important;" >	
		
					<div id = "general"  style="padding-top: 0px !important;">
					
						<div class = "backStyle"  style="padding-top: 0px !important; margin-top: 0px !important;">
						
							<div class = "clTitle"  style="padding-top: 0px !important; margin-top: 0px !important;" >
				  			 	<h:outputLabel value = "Opciones para restablecer tu contraseña" /> 
				  			</div>
			  			
							<fieldset>
								<div style="content-forgot-pass">									
								
									
										<h:inputHidden style = "display:none" id = "browser_name"      value = ""/>
										<h:inputHidden style = "display:none" id = "browser_version"   value = ""/>
										<h:inputHidden style = "display:none" id = "browser_OS"        value = ""/>								
										<h:inputHidden style = "display:none" id = "browser_width"     value = ""/>
										<h:inputHidden style = "display:none" id = "browser_height"    value = ""/>
									
										<div class = "dvContent" style = "overflow: hidden;">
											<h:outputLabel id    = "error" 
														   value = "#{forgotPass.errorMsg}"
														   styleClass = "errormsg" 
														   style      = "margin-left:16px;" />
										</div>
											
										<div class = "dvContent">											
											<h:panelGroup id = "gral-validation" rendered = "#{forgotPass.validSession==false}">
											
												<h:panelGroup id = "option-recovery" rendered = "#{forgotPass.panel_opciones_ENABLED}">																							
													<ui:include src = "secciones/forgot_password/opciones_reestablecer_password.xhtml"/>													
												</h:panelGroup>
												
												<h:panelGroup id = "section-security-answer" rendered = "#{forgotPass.validMail and not forgotPass.max_number_attempts_reached}">													
													<ui:include src = "secciones/forgot_password/responder_pregunta_seguridad.xhtml"/>	
												</h:panelGroup>
												
												<h:panelGroup id = "max_number_attempts_reached" rendered = "#{forgotPass.max_number_attempts_reached}">													
													<div class = "errormsg">
														<p style = "padding: 0 15px 8px 16px;">Has excedido el límite máximo de respuestas incorrectas. Por favor, comunícate con nosotros.</p>
													</div>
												</h:panelGroup>
												
												<h:panelGroup id = "section-restore-pass" rendered = "#{forgotPass.changePass}">
													<ui:include src = "secciones/forgot_password/cambiar_password.xhtml"/>																									
												</h:panelGroup>
												
											</h:panelGroup>
											
												
																														
										</div>									
									
								</div> 
							</fieldset>
						</div>
					</div>					
				</div>			
			</div>
		</div>
	
		<div id="footer" style="width: 100%; magin-right: 0px;">
			<ui:include src="templates/footerContenido.xhtml" /> 
		</div>


		<div id = "passHelp"  style="opacity: 1.87; position: absolute; display: none; border: 2px solid #CCCCCC; width:320px;height: auto;overflow: auto;">
		
			<div class="arrow_leftHelp" style="top: 80px;" />
			
			<div id="message" style="width:300px; padding: 8px 8px 8px 12px; height:auto; overflow: auto; background-color: #FFFFFF;">
				<div id="passTitle"><b>Tu contraseña debe contener:</b></div>
				<div id="valLength" class="descVal">Al menos 8 caracteres.</div>
				<div id="valVoc"    class="descVal">Al menos una vocal.</div>
				<div id="valCnsnt"  class="descVal">Al menos una consonante.</div>
				<div id="valNum"    class="descVal">Al menos un número</div>
				
				<div id="passTitle2"><b>Tu contraseña NO debe contener:</b></div>
				
				<div id="valName"      class="descVal">Tu nombre</div>
				<div id="valUsr"       class="descVal">Tu nombre de usuario del correo electrónico</div>
				<div id="valInst"      class="descVal">El nombre de la institución</div>
				<div id="valCharCon"   class="descVal">Caracteres consecutivos</div>
				<div id="valNumCon"    class="descVal">Números consecutivos</div>
				<div id="valRepChar"   class="descVal">Un caracter repetido más de 2 veces consecutivas</div>
				<div id="valMaxLength" class="descVal">Más de 12 caracteres</div>
			</div>
		</div>

		<ui:include src = "templates/msgProcessing.xhtml" />
		</h:form>
