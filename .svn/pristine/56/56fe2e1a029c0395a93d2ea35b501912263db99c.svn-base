	xmlns:p  = "http://primefaces.org/ui" >
	
	<div class=" telefonos_paso1">
	
	
				<div class="dvContent">
					<div class="dvLabel" style="width: 390px;">
						<!-- Cambios UX 2.41.2 Gabriel Martínez se modifico la leyenda inferior-->
					<h:panelGroup rendered = "#{sessionBean.area == 'I'}" >
					
