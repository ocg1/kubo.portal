<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<h:panelGroup rendered="#{addPldDocument.displayBussiness=='block'}">
		<div class="containerTitleUpload">
			<div class="#{addPldDocument.dispCheckAcredProBusiness =='inline'? 'cornerDisabled':'corner'}"></div>
			<div class="#{addPldDocument.dispCheckAcredProBusiness =='inline'? 'numberAndTitleDisabled':'numberAndTitle'}">
				<!-- div class="#{addPldDocument.dispCheckAcredProBusiness =='inline'? 'numberDisabled':'number'}" >#{addPldDocument.numAcredProBusiness}</div -->
				<div class="#{addPldDocument.dispCheckAcredProBusiness =='inline'? 'titleDisabled':'title'}"><h3 class="encH3">#{addPldDocument.tiAcredProBusiness}</h3></div>
				<p:graphicImage  style="float:right;display:#{addPldDocument.dispCheckAcredProBusiness}" id="checkAcredProBus" url="../resources/img/check.png" />
			</div>			
		</div>
		
		<div class="dvContent2" >
			<h:form id="frm_acredProBus" enctype="multipart/form-data" prependId="false" onsubmit="return validateFileUploadCombo('cbo_compActEcon');">
				<div style="margin:0; display:#{addPldDocument.displayBussiness}">
				<div class="field selectsDocumentos" >
					<div class="dvLabel"  style="width:400px;">
						<h:outputLabel  styleClass="labelsStl" value="#{msg.Select_one_more_document}" />							
					</div>
													
					
					
						<div class="selectNuevo">
							<h:selectOneMenu  id="type_acredProBus"  styleClass="elementStlSelAddress combo_tipo_doc" value="#{addPldDocument.typeAcredProBusiness}" >
								<f:selectItem itemValue=""  itemLabel="Selecciona"/>
								<f:selectItems value="#{addPldDocument.listAcredProBusiness}" var="type" itemLabel="#{type.name}" itemValue="#{type.fileTypePk.file_type_id}"/>
								<p:ajax event="change" onstart="return validateFileUploadCombo('type_acredProBus');"></p:ajax>
							</h:selectOneMenu>	
						</div>
								
						<div id="dvtype_acredProBus" style="display: none;width: 97%;position: relative;">
							<span style="position: absolute; left: 112px;top: -3px;">.</span>
							<p:fileUpload id="file_acredProBus" styleClass="#{sessionBean.mobile?'custumStlFileUpload':'custumStlFileUploadPreview'}"  fileUploadListener="#{addPldDocument.handleFileUpload}"  style="margin-top:10px;"									    									    
								    invalidSizeMessage="Tamaño del archivo inválido"
								    invalidFileMessage="Tipo de archivo no válido."
								    showButtons="false" 
						            mode="advanced" 
						            auto="#{sessionBean.mobile}" 
						            label="+ Subir"
						            sizeLimit="5242880"  	
						            allowTypes="/(\.|\/)(gif|jpe?g|png|pdf|PDF)$/"/> 							
						</div>
						</div>
						<div class="avisoDocs">
						<i class="fa fa-caret-up"></i>
							Tiene que ser de los últimos 3 meses.
						
						</div>			
					<div  class="dvElementLength">
					
					
					
						<h:panelGroup id="listacredProBus" class="contenedor_docs">
							<ui:include src = "../../subir_otrodoc.xhtml"/>
						<script>
					
						actualizacionListadoDocumentos ("#listacredProBus");
						resetar_indices();
					
					</script>
						
						    <h:panelGroup rendered ="#{addPldDocument.lDocAddedAcredProBusiness.size() eq 1 }" >
								<span class="doc_proporcionado">
									Has proporcionado el siguiente documento
								</span>
							</h:panelGroup>	
							<h:panelGroup  rendered ="#{addPldDocument.lDocAddedAcredProBusiness.size() gt 1 }" >
								<span class="doc_proporcionado">
									Has proporcionado los siguientes documentos
								</span>
							</h:panelGroup>	
							
								<ui:repeat   var="loopAcreProBus" value="#{addPldDocument.lDocAddedAcredProBusiness}">			
															
							   <div>
							   		<figure><img src="../resources#{loopAcreProBus.location_thump}" /></figure>
									<small><i class="fa fa-check"></i>#{loopAcreProBus.uploaded_text}</small> 
									<fieldset class="btn_imagenes">
										<span onclick="return ejecutaAccion(this, '#{loopAcreProBus.file_type_id}','#{loopAcreProBus.proyect_loan_id}')" class="cambiar"><i class="fa fa-pencil-square-o"></i> </span>
										<span onclick="return eliminarElemento(this, '#{loopAcreProBus.company_id}','#{loopAcreProBus.file_id}', '#{loopAcreProBus.file_type_id}', '#{loopAcreProBus.prospectus_id}', '#{loopAcreProBus.proyect_loan_id}', '#{loopAcreProBus.location}')" class="eliminar"><i class=" fa fa-trash"></i></span>
									</fieldset>
								</div>
									
								</ui:repeat>
							
						</h:panelGroup>									 						
					</div>
				</div>
			</h:form>
		</div>				
	</h:panelGroup>
</ui:composition>		