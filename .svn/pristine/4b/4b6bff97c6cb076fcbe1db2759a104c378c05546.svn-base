<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<h:panelGroup rendered="#{administrationProfile.actualPage == 'screenRole.xhtml'}" >
		<div style="border: solid 0px #E3E3E3; margin-left: auto; margin-right: auto; margin-top: 15px; width: 350px; height: auto; overflow: auto; padding: 10px;" >
			<div style="width: 99%; text-align: center; margin-left: auto; margin-right: auto; margin-bottom: 15px;">
			<span style="color: #439539;font-size: 1.3em; font-weight: bold;" >
				Asignaci√≥n de Pantallas por Rol
			</span>
			</div>
			<div style="width: auto; margin-bottom: 15px;" >
				<div class="styled-select-Address">
					<h:selectOneMenu id="myselectrole" value="#{screenRole.thisRole}"   styleClass="elementStlSelAddress"  >
						<f:selectItem itemLabel="" itemValue="" />
						<f:selectItems value="#{screenRole.lstRole}" var="role" itemLabel="#{role.name}" itemValue="#{role.rolepk.role_id}" ></f:selectItems>
						<p:ajax event="change"  listener="#{screenRole.selectRole}" update="pnlCheckScreen"   ></p:ajax>
					</h:selectOneMenu>
				</div>
			</div>
			
			<h:panelGroup id="pnlCheckScreen" >
				<div class="dvContent">
					<div  class="dvElement" >
						<p:selectManyCheckbox id="chkScreen"  styleClass="checkStl elementStlLbl" layout="pageDirection" value="#{screenRole.screenselected}"   >
							<f:selectItems value="#{screenRole.lstscreen}" var="screen" itemValue="#{screen.screenPK.screen_id}" itemLabel="#{screen.name}"  ></f:selectItems>
							<p:ajax event="change"  ></p:ajax>
						</p:selectManyCheckbox>
					</div>
				</div>
			</h:panelGroup>
				<div id="msg3" style="display: none; float: none; clear: both;color: #439539;  " >
					Las pantallas han sido asignadas
				</div>
			<div style="width: 104px; margin-top: 15px; margin-left: auto; margin-right: auto;" >
				<p:commandLink actionListener="#{screenRole.saveScreenRole}" onstart="return  initAction();" oncomplete="return completeAction('msg3');" immediate="true" ajax="true" >
					<div class="buttonPR" style="margin:5px 0;width: 100px;">	
						Asignar					
					</div>
				</p:commandLink>
			</div>
			
		</div>
	</h:panelGroup>				
</ui:composition>				