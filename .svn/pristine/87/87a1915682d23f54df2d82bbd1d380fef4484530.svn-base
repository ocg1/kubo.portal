<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:p  = "http://primefaces.org/ui">	
				
	<div class="monto_saldo table_style">				
		<table cellspadding="0" cellspacing="0">					
			<tr class="encabezado_gris">
				<td>
					<div class = "labelsStl" ><b>Monto a Pagar:</b></div>
				</td>
								
				<td style = "text-align: right;">
					<h:panelGroup rendered = "#{credit.status != 'P' and credit.status != 'RP'}">
						<div>
							<table>
								<tr>
									<td>
										<div id    = "morePay#{status.index}" 
											 style = "cursor: pointer;" 
											 class = "btnMorePayment">
											<span>
												#{credit.montoProxCuota} 
											</span>
										</div>
															
										<div id = "morePay#{status.index}Cont" class = "dvCntDesPay" >
											<h:outputLabel value = "#{credit.contDesMonto}" escape = "false" />
										</div>
									</td>
									<!-- <td style="margin: 0px; padding: 0px;">
										<img  alt="Desglose" src="../resources/img/more.png" border="0px" width="22px" height="22px" style="cursor: pointer;visibility: hidden;" class="btnMorePayment"  />
									</td> -->
								</tr>
							</table> 
						</div> 
					</h:panelGroup>
										
					<h:panelGroup rendered = "#{credit.status == 'P' or credit.status == 'RP'}" >
						<div>
							<span>
								$0.00
							 </span>
						</div>
					</h:panelGroup>							
				</td>
			</tr>

			<tr>
				<td><div class="labelsStl" >Fecha LÃ­mite de Pago<br />(Fecha de Vencimiento):</div></td>
				<td><div class="labelsStl" ><span>#{credit.fecProxCuota} </span> </div></td>
			</tr>
					
			<tr class="encabezado_gris">
				<td>
					<div class="labelsStl" ><b>Saldo para liquidar:</b> </div>
					
					<div id="moreTotalPay#{status.index}Cont" class="dvCntDesPay" >
						<h:outputLabel value="#{credit.contDesTotal}" escape="false"/>
					</div>
					
				</td>
				
				<td>
					<h:panelGroup rendered="#{credit.status != 'P' and credit.status != 'RP'}" >
						<div class="labelsStl">
							
							<table cellspadding="0" cellspacing="0">
								<tr>
									<td> 
										<div id    = "moreTotalPay#{status.index}" 
											 style = "cursor: pointer;" 
											 class = "btnMorePayment" > 
											<span> #{credit.saldoLiquidar}</span> 
										</div> 
									</td>
									<!-- <td style="margin: 0px; padding: 0px;"><img  alt="Desglose" src="../resources/img/more.png" border="0px" width="22px" height="22px" style="cursor: pointer;visibility: hidden;"  /></td> -->
								</tr>
							</table> 							 
						</div>
					</h:panelGroup>
							
					<h:panelGroup rendered="#{credit.status == 'P' or credit.status == 'RP'}" >							
						<div class="labelsStl">
							<span>
								$0.00
							 </span>
						</div>
					</h:panelGroup>
				</td>
			</tr>
					
			<tr>
				<td>
					<div class="labelsStl" > Saldo Insoluto (Monto Base): </div>
				</td>
				<td >
					<div class="labelsStl"><span>#{credit.saldoInsoluto}</span></div>
				</td>
			</tr>
			
			<tr>
				<td>
					<div class="labelsStl" > Saldo Vencido (Monto Base): </div>
				</td>
				<td >
					<div class="labelsStl" ><span>#{credit.saldoCapVen}</span></div>
				</td>
			</tr>
					
			<tr>
				<td>
					<div class="labelsStl" > Intereses Generados: </div>
				</td>
				<td >
					<div class="labelsStl"><span>#{credit.interesesGenerados}</span></div>
				</td>
			</tr>
			
			<tr>
				<td>
					<div class="labelsStl" > Comisiones Generadas: </div>
				</td>
				<td >
					<div class="labelsStl"><span>#{credit.comisionesGenerados}</span></div>
				</td>
			</tr>
			
			<tr>
				<td>
					<div class="labelsStl" > IVA: </div>
				</td>
				<td >
					<div class="labelsStl"><span>#{credit.ivaGenerado}</span></div>
				</td>
			</tr>
		</table>
	</div>				
</ui:composition>				