<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	
	<div class = "main_textarea_nota">		
		
		<p style = "margin:5px auto; border:0px solid black" >Observaciones</p>

		<h:inputTextarea id         = "txt-capture-note"
						 value      = "#{summaryRequest.notas.observaciones}"
						 styleClass = "textarea_nota">						 
			<p:ajax event    = "blur" 
					listener = "#{summaryRequest.notas.listener_observaciones}"/>			
		</h:inputTextarea>			
	</div>	
</ui:composition>	