<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
					
	<p:column styleClass="celdaMod">
		<div>
			
			<h:outputText rendered = "#{listIncome.income_type_id ==6}">
			
		
				
			</h:outputText>
			
			<h:panelGroup rendered = "#{incomesExpenses.changeActions}">
				<span>$</span>
				<h:inputText    size = "7" styleClass = "elementAddresMin"
							disabled = "#{incomesExpenses.calculator.listIncome.size()==0 or listIncome.income_type_id==6}" 
							   value = "#{listIncome.ammount_modified}" 
							onkeyup = "format(this,'otro');" 
							class="inputMod">
							
					<p:ajax event = "blur"
							   onstart = "return funcWaitIncome();" 
							oncomplete = "IncomesExpenses.change_income_oncomplete(xhr, status, args);" 
							  listener = "#{incomesExpenses.changeIncome(listIncome)}" />
							
							<!-- update     = ":frmQuest:pnlIndicadores :frmQuest:lstIncometb :frmQuest:lstExpensestb :frmQuest:indice_pago_deudas :frmQuest:indice_pago_deudas_mesa_control" -->
				</h:inputText>
			</h:panelGroup>
			
			<h:panelGroup rendered = "#{!incomesExpenses.changeActions}">
				<span>$</span>#{listIncome.ammount_modified}
			</h:panelGroup>
		</div>
	</p:column>				
</ui:composition>				