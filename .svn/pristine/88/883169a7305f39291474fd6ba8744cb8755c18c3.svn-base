<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
				 xmlns:ui = "http://java.sun.com/jsf/facelets"
			     xmlns:h  = "http://java.sun.com/jsf/html"
				 xmlns:p  = "http://primefaces.org/ui">
	<p>Apellido Paterno</p>
	
	<p:inputText id = "person_father_last_name"
				 immediate  = "true"
				 value      = "#{summaryRequest.editor_nombre.father_last_name}"  
				 styleClass = "elementStl" >
		<p:ajax event = "blur" listener = "#{summaryRequest.editor_nombre.listener_father_last_name}" />
	</p:inputText>		
	
	<p>Apellido Materno</p>
	
	<p:inputText id = "person_mother_last_name"
				 immediate  = "true"
				 value      = "#{summaryRequest.editor_nombre.mother_last_name}"  
				 styleClass = "elementStl" >
		<p:ajax event = "blur" listener = "#{summaryRequest.editor_nombre.listener_mother_last_name}" />
	</p:inputText>					 
</ui:composition>				 