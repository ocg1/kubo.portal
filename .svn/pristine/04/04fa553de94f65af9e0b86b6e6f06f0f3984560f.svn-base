<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
		
					
	<h:panelGroup rendered = "#{searchRequest.displayUser}">	
		
			<div  id = "filtro_prospecto" 
				  
				  style = "">
				<h:selectOneRadio id = "radio-type-search1" 
								  onchange   = "Busqueda.changelabelSearch(this,'inp_search_input','text-search-type',inpAutocomplete);" 
								  value      = "#{searchRequest.radioTypeSearch}"  
								  styleClass = "radio elementStlLbl">
				    
				    <f:selectItem itemValue="1" itemLabel="Por nombre / ID Prospecto"/>
				    <!-- <f:selectItem itemValue="2" itemLabel="Por número de prospecto"/> -->
				    <f:selectItem itemValue="4" itemLabel="Por Usuario"/>
				    <f:selectItem itemValue="9" itemLabel="Por Email"/>
				    <f:selectItem itemValue = "7" itemLabel = "Persona Moral"/>
				    <f:selectItem itemValue = "8" itemLabel = "Número de Crédito"/>
				    <!--  <f:selectItem itemValue="3" itemLabel="Por email"/>  -->		
				    
				    <f:ajax event="click"/>				    
				
				</h:selectOneRadio>
				
			</div>
			
	</h:panelGroup>

	<h:panelGroup rendered = "#{!searchRequest.displayUser}">
		
			<div id = "filtro_prospecto"
				 class="dvElement" 
				 style="width: 498px;padding:0;border: 0px solid silver;">
				<h:selectOneRadio id = "radio-type-search" 
				                  onchange   = "Busqueda.changelabelSearch(this,'inp_search_input','text-search-type',inpAutocomplete);" 
				                  value      = "#{searchRequest.radioTypeSearch}"  
				                  styleClass = "radio elementStlLbl">
				    <f:selectItem itemValue="1" itemLabel="Por nombre"/>
				    <f:selectItem itemValue="2" itemLabel="Por número de prospecto"/>
				    <!--  <f:selectItem itemValue="3" itemLabel="Por email"/>  -->		
				    <f:ajax event="click"/>				    
				</h:selectOneRadio>
			</div>
				
	</h:panelGroup>				
</ui:composition>				