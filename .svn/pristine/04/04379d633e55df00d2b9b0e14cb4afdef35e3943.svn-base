<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
				 xmlns:ui = "http://java.sun.com/jsf/facelets"
			     xmlns:h  = "http://java.sun.com/jsf/html"
			     xmlns:p  = "http://primefaces.org/ui">
			     
	<div class = "field">
	
		<div class = "dvLabel" >
			<h:outputLabel styleClass = "labelsStl" value = "#{msg.Point_of_reference}" />
		</div>
	
		
		<div >
			<h:inputTextarea id = "fiscal-point_reference" rows = "5" immediate = "true"
							 value = "#{basicData.fiscal.address.description}"
							 onfocus    = "Domicilio.init_focus_date(9);" 
							 styleClass = "elementTextArea validatorClass hs_class">	
							 						
				<p:ajax event = "blur"
						oncomplete = "Domicilio.description_on_complete(xhr, status, args);" 
						listener   = "#{basicData.fiscal.init_description}"/>
			</h:inputTextarea>
			
			<p:watermark for = "fiscal-point_reference" styleClass = "texto_ayuda" value = "Ejemplos: Edificio verde, frente al parque..." />
		</div>
	</div> 		
</ui:composition>			     