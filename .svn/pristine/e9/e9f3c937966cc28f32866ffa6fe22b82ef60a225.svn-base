<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<aside class = "bloque-FB">
		<div class = "loginFacebook" onclick="fb_login(this);">Inicia con Facebook</div> 
               
		<span class="separacion"><small><sub>O</sub></small></span>
           	
		<h:commandLink id = "logFac" value = "boton" styleClass = "callActionMedium btnVerde">
		  	<p:ajax event = "click" immediate = "true" update = "warningUser"
		  			listener = "#{iniciaSession.iniciaSesion_Facebook}"  
		  			onstart = "return loader ();" 
		  			oncomplete = "returnLoginFB(xhr, status, args)" />		  	
		</h:commandLink>   
		
		<p:inputText id = "emailFB" value = "#{iniciaSession.fb_email}">
			<p:ajax  event = "blur" />														 
		</p:inputText>	
			               
		<p:inputText id = "idFB" value = "#{iniciaSession.fb_id}">
			<p:ajax  event = "blur" />				 
		</p:inputText>
				 				 
	 	<div id = "token"  style = "display:none;"/>			
		<div id = "status" style = "display:none;"/>
		<div id = "token"  style = "display:none;"/>			
		<div id = "status" style = "display:none;"/>		                
	</aside>				
</ui:composition>				