<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:p  = "http://primefaces.org/ui">

	<div id = "email-pregunta-seguridad" style = "display: none;">
		<span>Para asignarte la pregunta es necesario conocer primero el correo electronico con el que te registraste: </span>

		<h:inputText >
			<p:ajax event = "blur" listener = "#{desbloqueo_password.listener_email}"/>
		</h:inputText>						 		
		
		<div id = "boton-init_respuesta_seguridad">
			<p:commandLink immediate = "true" ajax = "true" 
						   onstart        = "DesbloqueoPassword.show_process_icon();"
						   oncomplete     = "DesbloqueoPassword.security_question_on_complete(xhr, status, args);"
						   actionListener = "#{desbloqueo_password.init_security_question}"						   
						   update = "panel-security-question">						   	
						   
				<div class = "buttonPR" >
					<h:outputText value = "#{msg.Btn_next_next}" />
				</div>								
			</p:commandLink>
		</div>						
	</div>									
</ui:composition>				