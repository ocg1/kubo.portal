<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<div class = "field">
		<div class = "dvLabel">
			<h:outputLabel styleClass="labelsStl" value="¿Cuál es tu estado civil? *" />
		</div>
		


			<div class="selectNuevo">
				<h:selectOneMenu id = "edoCivil" 
								 value      = "#{addMyLoan.naturalperson.legal_status_id}"  
								 styleClass = "elementStlSelAddress validatorClass selectchange hs_class">
								 
					<f:selectItem itemLabel = "Selecciona..." itemValue = "0" />
					
					<f:selectItems value = "#{addMyLoan.lista_estado_civil}" 
								   var   = "legalstatus" 
								   itemLabel = "#{legalstatus.description}" 
								   itemValue = "#{legalstatus.legalstatusPK.legal_status_id}"/>
					
					<p:ajax event    = "change" 
							listener = "#{addMyLoan.listener_estado_civil}" 
							onstart  = "hideIFEjs()" 
							update   = "maritalPnl"/>
				</h:selectOneMenu>
			</div>
			
	</div>
</ui:composition>			