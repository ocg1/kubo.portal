<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<p:outputPanel id = "pnlOtherPersonPhone" >
		<div id = "dvConPnlOtherPersonPhone" style = "display: none;">
			<table style='width: 410px;color:#333333; border: solid 1px #e6e6e6;'>
				<tr>
					<td>
						<h:outputLabel value="Teléfono reportado previamente por #{lstPersonPhone.size() > 1 ? 'los siguientes prospectos:' : 'el siguiente prospecto:'}"/>
					</td>
				</tr>
				
				<ui:repeat var = "per" value = "#{summaryRequest.telefono.lstPersonPhone}">
					<tr>
						<td style="border-top:solid 1px #333">
							<span style="font-weight: bold;">
								#{per.person.NombreCompletoNPM()}
							</span>
							
							<br/>
							
							<div style="margin-left:30px;">
							
								<ui:repeat var="fone" value="#{per.phoneRepeat}">
									<span>
										<h:outputLabel value="#{fone.phoneType.name} - #{fone.phone_number}"/>
									</span>
									<br/>
								</ui:repeat>
								
								<h:panelGroup rendered="#{per.proyectloan.proyect!=null and per.proyectloan!=null}">
									<span style="font-weight: bold;">
										<h:outputLabel value="Proyecto: #{per.proyectloan.proyect.name}"/>
									</span>
									<br/>
									<span style="font-weight: bold;color:#{per.proyectloan.status_id==3 ?'#439539':''}#{per.proyectloan.status_id==4 ?'orange':''}">
										Estatus: #{per.proyectloan.statusProyect.name}
									</span>
									<br/>
								</h:panelGroup>
								
								<h:panelGroup rendered="#{per.proyectloan.proyect==null and per.proyectloan==null}">
								
									<span style="font-weight: bold;">
										Proyecto:No publicado
									</span>
									<br/>
									<span style="font-weight: bold;">
										Estatus: No publicado
									</span>
									<br/>
									
								</h:panelGroup>
								
								<span style="font-weight: bold;">
									<h:outputLabel value="Número de folio:#{per.person.prospectus.tracking_id}" />
								</span>
								
							</div>
					
						</td>
		
					</tr>															
		
				</ui:repeat>
		
			</table>
		</div>
	</p:outputPanel>				
</ui:composition>				