<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
				 xmlns:ui = "http://java.sun.com/jsf/facelets"
			     xmlns:h  = "http://java.sun.com/jsf/html"
				 xmlns:f  = "http://java.sun.com/jsf/core"
				 xmlns:p  = "http://primefaces.org/ui">
	
	<div id = "msg_error_edicion_vivienda" style = "display: none; padding:5px 0">
		<p style = "color: red"/>
	</div>
	
	<div style = "clear:both; margin: 5px 0;">			
		<p:commandLink immediate      = "true"
					   onstart        = "return validar_formulario_edicion_vivienda();"
					   oncomplete     = "guardar_edicion_vivienda(xhr, status, args);"
					   update         = "vivienda"
					   actionListener = "#{ibeneficiaries.editor_vivienda.listener_guardar_edicion}">
			<div class = "buttonPR" 
			     style = "width:100px; 
			     		 
			     		  float: left; 
			     		  margin: 0 5px 0 0;" >Guardar</div>		
		</p:commandLink>	
											 	
	<div class   = "buttonPR"  
		 onclick = "cancelar_edicion_vivienda();"
		 style   = "margin: 0; 
		 			margin-left: 135px;
		 			width: 100px;
		 			font-size:0.9em;
		 			float: left;">Cancelar</div>
	</div>				 
</ui:composition>				 