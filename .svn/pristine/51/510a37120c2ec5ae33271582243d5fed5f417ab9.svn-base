<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
	  			xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<script>
		function reanudar_solicitud_CANCELADA() {										
			$("#input_listener_reanudar_solicitud_CANCELADA").click();
		}
	</script>				
					
	<h:panelGroup rendered = "#{deal.proyecto_cancelado}">				
		<div class = "regParag" align = "justify">
			<div class = "clContEnd">
							
				<div class = "corner_img">
		    		<p:graphicImage url   = "../resources/img/corner.png" 
		    						style = "width: 40px; height: 40px;" />
		    	</div>
		    	
		    	<div class = "borderContDescEnd">
					<div class = "dvContent clContDescBack1" style = "margin: 0px !important;" >
						<div class = "clContDescBack2">
							<h:panelGroup rendered = "#{not deal.reanudar_solicitud_ENABLED}">
								<table style = "width: 370px; margin: 0 auto; text-align: justify;">
									<tr>
										<td colspan = "2" style = "padding-bottom: 8px;">
											<span style = "padding-bottom: 8px;
														   font-size: 1.3em;
														   font-weight: bold;">											
												¡Gracias por finalizar el llenado de tu solicitud!
											</span>										
										</td>
									</tr>
										
									<tr>	
										<td>										
											<span style = "padding-bottom: 8px; font-size: 1.2em;">
												Como te comentamos previamente por correo electrónico y/o por teléfono, 
												hemos revisado tu solicitud y por el momento no nos es posible apoyarte con un crédito, 
												te sugerimos seguir las recomendaciones que te dimos para que en un futuro seas candidato al mismo.
											</span>
											
											</td>
										</tr>
										
									<tr>
										<td style = "padding-bottom:15px">											
											<span style = "padding-bottom: 8px; font-size: 1.2em;">  
												Cuando haya transcurrido el tiempo que te comentamos y hayas llevado a cabo las acciones recomendadas, 
												puedes retomar tu solicitud y volver a solicitarnos crédito, 
												con gusto volveremos a evaluarla.
											</span>
										</td>
									</tr>
								</table>
							</h:panelGroup>
							
							<h:panelGroup rendered = "#{deal.reanudar_solicitud_ENABLED}">
								<table style = "width: 370px; margin: 0 auto; text-align: justify;">
									<tr>
										<td colspan = "2" style = "padding-bottom: 8px;">
											<span style = "font-size: 16px;
														   font-weight: bold;
														   border: 0px solid black;">											
												¡Ya puedes volver a solicitar crédito con nosotros!
											</span>										
										</td>
									</tr>
										
									<tr>	
										<td>										
											<span style = "padding-bottom: 8px; font-size: 1.2em;">
												Si deseas reactivar tu solicitud en Kubo, 
												y volver a solicitar crédito con nosotros, 
												por favor da click en botón de Reanudar Solicitud.
											</span>
										</td>
									</tr>
								</table>
								
								<div class="dvContent btnAgree">
									<div onclick = "reanudar_solicitud_CANCELADA();" class = "solicitud callAction btnNaranja">
										Reanudar Solicitud
									</div>
								</div>	
								
								<div style = "display: none"> 
									<h:inputText  id = "input_listener_reanudar_solicitud_CANCELADA">
										<p:ajax event      = "click" 
												onstart    = "return displayMessageProcessing('msgprocessing',true);"
												oncomplete = "closeMessageProcessing();"
												listener   = "#{deal.listener_reanudar_solicitud}"
												update     = ":actualPage :form_Prin:hiddenactios :form_Prin :contSimReg" 
												imediate	= "true" />
									</h:inputText>
								</div>								
			        		</h:panelGroup>
						</div>
					</div>
				</div>				
			</div>								
		</div> 	
	</h:panelGroup>			
</ui:composition>	