<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">	

					<div>
						<div class="monto_consolidar">
							<h:outputText value="Monto a consolidar" />
						</div>
						
						<div style = "float: right; width: 140px;">
							<span>$</span>
							
							<span>
								<h:inputText id = "txt-ammount-minus-consolidate" size = "7" rendered = "#{incomesExpenses.changeActions}"
											 styleClass = "elementAddresMin" 
											 onkeyup = "format(this,'otro'); showComment(this);" 
											 value = "#{incomesExpenses.ammountConsolidate.ammount_modified}" 
											 style = "width: 80px !important; text-align: right; font-size: 0.98em !important; color: #333333;">
																						
									<p:ajax event="blur"/>
								</h:inputText>
								
								<h:panelGroup rendered = "#{!incomesExpenses.changeActions}" >
									#{incomesExpenses.ammountConsolidate.ammount_modified}
								</h:panelGroup>
							</span>
							
							<span>
								<p:commandLink  rendered = "#{incomesExpenses.changeConsolidate.hasChange}"

												immediate = "true" style = "cursor:pointer;float:right;margin-top:3px;">
									<h:graphicImage styleClass = "change_icon"  url = "../resources/img/change-icon.png" />
									
																	<!--  
												actionListener = "#{incomesExpenses.setListChanges(incomesExpenses.changeConsolidate)}" 
												oncomplete = "showPopUpChanges();" 
												-->
								</p:commandLink>												
							</span>
						</div> 
					</div>
</ui:composition>					