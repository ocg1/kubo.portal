			<script>
				loadInvButton();
								
			function loadInvButton()
			{									
				$(".clInvEdoCta").click(function()
				{
					$.fancybox(
					{
						'width' 				: '90%',
						'height' 				: '90%',
						'padding'				: '0',
						'margin' 				: '0',
						'autoScale' 			: 'false',
						'modal' 				: false,
						'transitionIn' 			: 'elastic',
						'transitionOut' 		: 'elastic',
						'type' 					: 'iframe',
						'scrolling' 			: 'auto',
						'centerOnScroll' 		: 'true',
						'overlayColor'			: '#333333',
						'hideOnOverlayClick'	: true,
						'showCloseButton' 		: true,
						'href'					: 'edoCuentaForInv.xhtml?credit_id=#{summaryRequest.actualProyect.safi_credit_id}',
						'onComplete' 			: function()
													{
														var height =  $(window).height() * 0.9;
														 $('#fancybox-content').height('auto');
														 $('#fancybox-content').css('min-height',''+height+'px');
														 $('#fancybox-content').children().eq(0).css('height','auto');
														 $('#fancybox-content').children().eq(0).css('min-height',height+'px');
														 $.fancybox.center();
													}
					})				
				});
			}
		</script>				
