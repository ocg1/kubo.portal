			<div class="menu_opcion clsEdoCuentaForInvButt clInvEdoCta"  onclick="botonActive(this)" style="display: block !important;">
			
				Estado de Cuenta
				
			</div>
<!-- 
			<f:attribute name="prospectusid" value="#{summaryRequest.persona.natPerPK.prospectus_id}"/>
