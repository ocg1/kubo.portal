<ui:composition 
	xmlns    = "http://www.w3.org/1999/xhtml"
	xmlns:ui = "http://java.sun.com/jsf/facelets"
	xmlns:h  = "http://java.sun.com/jsf/html"
	xmlns:f  = "http://java.sun.com/jsf/core"
	xmlns:c  = "http://java.sun.com/jsp/jstl/core"
	xmlns:p  = "http://primefaces.org/ui">
	
	<p:column  style="width: 20% !important;" >		
		<div class = "#{nota.priority_type_id == 1 ? 'alta_prioridad' : ''}" style = "width:99% !important;">				
			<h:outputText value = "#{nota.noteType.name} #{summaryRequest.notas.getMotiveDescription(nota.motive_id)}" />			
		</div>
	</p:column>
	
	<p:column style="width: 30% !important;" >
		<div class = "#{nota.priority_type_id == 1 ? 'alta_prioridad' : ''}" style = "width: 99% !important;text-align: justify;">
			<h:outputText value = "#{nota.note} #{summaryRequest.notas.getMetaInfoTOKEN(nota)}" />			
		</div>
	</p:column>
	
	<p:column style="text-align:center; border: solid 0px #000000;">
		<div class = "#{nota.priority_type_id == 1 ? 'alta_prioridad' : ''}" style = "width: 99% !important;border: solid 0px #000000;">				
			<h:outputText value = "#{nota.person.first_name} #{nota.person.father_last_name}" />			
		</div>
	</p:column>
		
	<p:column style = "text-align:cente; border: solid 0px #000000;" >
		<div class = "#{nota.priority_type_id == 1 ? 'alta_prioridad' : ''}" style = "width: 99% !important;border: solid 0px #000000;">		
			<h:outputText value = "#{nota.change_date}">
				<f:convertDateTime pattern = "dd/MM/yyyy" />
			</h:outputText>			
		</div>					
	</p:column>
	
	<p:column  style = "width:3%; text-align: center" >
		<p:commandButton title          = "Editar Prioridad" 
						 icon           = "ui-icon-pencil"
						 immediate      = "true"				
						 actionListener = "#{summaryRequest.notas.listener_editar_nota_SELECTED}"
						 oncomplete     = "Nota.listener_editar_nota_SELECTED();"
						 styleClass		= "editar_nota"
						 rendered = "#{nota.change_prospectus_id == sessionBean.prospectus_id}"
						 >
			<f:attribute name = "nota_SELECTED" value = "#{nota}" />
		</p:commandButton>
	 </p:column>	
</ui:composition>	