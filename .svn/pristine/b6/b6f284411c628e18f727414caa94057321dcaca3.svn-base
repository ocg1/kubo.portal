<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<p:fileUpload id = "file_credFm2" 			      
				  fileUploadListener = "#{addPldDocument.handleFileCredFmDos}"																													   
				  invalidSizeMessage = "Tamaño del archivo inválido"
		    	  invalidFileMessage = "Tipo de archivo no válido."
		    	  showButtons = "false" 
            	  mode  = "advanced" 
            	  auto  = "#{sessionBean.mobile}"  
	              label = ""
	              update     = ":listCredFm2 :panelScript"
	              sizeLimit  = "5242880" 
	              allowTypes = "/(\.|\/)(gif|jpe?g|png|pdf|PDF)$/"
	         
	              styleClass = "#{sessionBean.mobile ? 'custumStlFileUpload' : 'custumStlFileUploadPreview'}">
		<f:attribute name = "typefile" value = "#{type.fileTypePk.file_type_id}"/>						 
	 </p:fileUpload> 
					 
</ui:composition>