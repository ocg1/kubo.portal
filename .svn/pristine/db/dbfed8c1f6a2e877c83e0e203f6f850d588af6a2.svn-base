<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
					<!-- <div class="#{sessionBean.area=='M'?'profileControlTable':'profile'}" style="display: none;"> -->
					<div class="profileControlTable full" style="display: none;">
						<div  class="centerPosition full">
							<h:panelGroup rendered="#{summaryRequest.actualProyect != null}">
								<h3 class="tab"><strong class="orange">Perfil del préstamo</strong></h3>
						
								<table class="lendingTable formato_tablas">
									<tbody>
										<tr>
											<th class="lendingTableFirst"><strong>Monto</strong></th>
											<th class="lendingTableTerm"><strong>Plazo</strong></th>
											<th class="lendingTableFreq"><strong>Frecuencia de pago</strong></th>
											<th class="lendingTableLast"><strong>Pago #{summaryRequest.frequency}</strong></th>
										</tr>
										<tr>
											<td class="lendingTableFirst">$#{summaryRequest.ammount}</td>
											<td class="lendingTableTerm">#{summaryRequest.months} #{summaryRequest.frequencyStr}</td>
											<td class="lendingTableFreq">#{summaryRequest.frequency}</td>
											<td class="lendingTableLast">$#{summaryRequest.payment}</td>
										</tr>
									</tbody>																
								</table>
						
				<h:panelGroup rendered="#{summaryRequest.nameVisible}">							
					<table>
						<tbody>
							<tr>
								<td class="lendingTableFirst" ><b>Tasa acreditado</b></td>
								<h:panelGroup rendered="#{summaryRequest.actualProyect.rate_with_opening!=null}">
									<td class="lendingTableTerm"><b>Tasa con comisión</b></td>
								</h:panelGroup>
							</tr>
					
							<tr>
								<td class="lendingTableFirst" >#{summaryRequest.actualProyect.rate}%</td>
								<h:panelGroup rendered="#{summaryRequest.actualProyect.rate_with_opening!=null}">
									<td class="lendingTableTerm">#{summaryRequest.actualProyect.rate_with_opening}%</td>
								</h:panelGroup>
							</tr>									
						</tbody>																
					</table>
					<br /><br />
				</h:panelGroup>
			</h:panelGroup>
							
			<h:panelGroup rendered="#{summaryRequest.nameVisible}" id="pnlBankDispersion">
				<ui:include src = "dispersion.xhtml"/>																								
			</h:panelGroup>		
		</div>
	</div>				
</ui:composition>				