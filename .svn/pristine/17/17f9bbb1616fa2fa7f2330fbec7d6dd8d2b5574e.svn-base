<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<li>
		<label >Contraseña segura<sup>*</sup> </label>
	</li>
	
	<li>              
		<h:panelGroup>
			<aside class = "combo_contrasena">                        				                      				                      				 
				<p:inputText id              = "pass" 
							 value           = "#{addNaturalPerson.password}" 
							 onfocus         = "inicializaValores()"  
							 styleClass      = "elementStl validatePass pass validatorClass pass_code"  
							 type            = "password" 
							 required        = "true" 
							 requiredMessage = "Favor de introducir tu contraseña">
												
					<p:ajax event = "blur" />										
				</p:inputText>
				
				<p:inputText 
					 value           = "#{addNaturalPerson.password}" 
					 onfocus         = "inicializaValores()"  
					 styleClass      = "elementStl validatePass pass validatorClass contra text_code"  
					 type            = "text" 
					 required        = "true" 
					 requiredMessage = "Favor de introducir tu contraseña">
												
					<p:ajax event="blur" />
										
				</p:inputText>
									
				 <h5 class="pass_show">Mostrar</h5>
			 </aside>  
                                 
			<p:watermark for="pass" value=""  /> 
                                     
                                  
			   <ul class="ayuda_contrasena_mobile">
	
					<li id="passTitle2"  ><b>Tu contraseña debe contener:</b></li>
					<li id="valLength2" class="item_a" ><i class="fa fa-circle"></i>Al menos 8 caracteres.</li>
					<li id="valVoc2" class="item_a" ><i class="fa fa-circle"></i>Al menos una vocal.</li>
					<li id="valCnsnt2" class="item_a" ><i class="fa fa-circle"></i>Al menos una consonante.</li>
					<li id="valNum2" class="item_a" ><i class="fa fa-circle"></i>Al menos un número</li>
					
					<li id="passTitle3" ><b>Tu contraseña NO debe contener:</b></li>
					<li id="valName2"  class="item_b" ><i class="fa fa-times"></i>Tu nombre</li>
					<li id="valUsr2"  class="item_b" ><i class="fa fa-times"></i>Tu nombre de usuario del correo electrónico</li>
					<li id="valInst2"  class="item_b"><i class="fa fa-times"></i>El nombre de la institución</li>
					<li id="valCharCon2"  class="item_b"><i class="fa fa-times"></i>Caracteres consecutivos</li>
					<li id="valNumCon2"  class="item_b" ><i class="fa fa-times"></i>Números consecutivos</li>
					<li id="valRepChar2"  class="item_b" ><i class="fa fa-times"></i>Un caracter repetido más de 2 veces consecutivas</li>
					<li id="valMaxLength2"  class="item_b"><i class="fa fa-times"></i>Más de 12 caracteres</li>
			</ul>
								
								  
                           	
                                                 	
		</h:panelGroup>
	</li>  
	<li></li>
	<li>
	
	
	<h:panelGroup id="warningConfPass">
			
									<div >
										
										<div style="color: #FF0000; font-size: 0.9em;" >
											<h:outputText escape="false" value="#{addNaturalPerson.warningConfPass}"></h:outputText>
										</div>
										
									</div>
								</h:panelGroup>
								<aside class="combo_contrasena">     
									<p:inputText id="confpass" 
												 onfocus="$(this).removeClass('requiredClass');" 
												 value="#{addNaturalPerson.confPass}"  
												 styleClass="validatorClass validate[required,minSize[5],equals[pass_input]] text-input pass_code2"  
												 type="password" 
												 required="true" 
												 requiredMessage="Favor de confirmar tu contraseña">
											 	<p:ajax  event="blur" 
												listener="#{addNaturalPerson.validaPass_portal}" 
												update="warningConfPass"  ></p:ajax>
									 </p:inputText>
									 
									 <p:inputText 
												 onfocus="$(this).removeClass('requiredClass');" 
												 value="#{addNaturalPerson.confPass}"  
												 styleClass="validatorClass validate[required,minSize[5],equals[pass_input]] text-input text_code2"  
												 type="text" 
												 required="true" 
												 requiredMessage="Favor de confirmar tu contraseña">
											 	<p:ajax  event="blur" 
												listener="#{addNaturalPerson.validaPass_portal}" 
												update="warningConfPass"  ></p:ajax>
									 </p:inputText>
	
	                                     <p:watermark for="confpass" value="Confirma tu contraseña" />
	                                      <h5 class="pass_show2">Mostrar</h5>
                           		</aside>        
                           
                           
                           	<aside class="contrasena_segura"> 
                           			Tu contraseña es válida
                           		 <span>	pero hay error al confirmarla</span>
                           	</aside>    
                           	
                           	<aside class="contrasena_novalida"> 
                           		Tu contraseña aún no es válida
                           	</aside>
                           	<div class="alerta"></div>  
                           	</li>                         
</ui:composition>                           