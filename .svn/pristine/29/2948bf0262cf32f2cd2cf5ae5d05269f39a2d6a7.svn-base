<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<div class = "field">
		<div class = "dvLabel" style = "width:365px">
			<h:outputLabel styleClass = "labelsStl" value = "#{msg.Point_of_reference}" />
		</div>

		
		
		<div class = "dvElementAddres1">
			<h:inputTextarea id = "point_ref" immediate = "true" tabindex = "36" rows = "5" 
							 styleClass = "elementTextArea validatorClass punto hs_class" 
							 onfocus = "ActividadEconomica.Domicilio.init_focus_date(4);"
							 value = "#{employment.addressbean.description}">
							 
				<p:ajax event = "blur"
						oncomplete = "ActividadEconomica.Domicilio.input_text_oncomplete(xhr, status, args);" 
						listener   = "#{addMyLoan.domicilio.init_input_textarea}"/>
			</h:inputTextarea>
			
			<p:watermark for = "point_ref" styleClass = "texto_ayuda" value = "Ejemplos: Edificio verde, frente al parque..." />
		</div>
	</div>				
</ui:composition>				