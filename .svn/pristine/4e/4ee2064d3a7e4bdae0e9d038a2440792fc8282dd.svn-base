<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">


		<div id = "section-update-questions" class = "target">		
	<br />
						
	<span class="descColor">Elige tus preguntas de seguridad y contéstalas, éstas nos ayudarán a identificarte en caso de que olvides tu contraseña</span>
													
	<br />
	
	<div class="dvContent" style="margin-top: 10px;">
	
		<div class="dvLabel">
			<h:outputText value="Pregunta de seguridad 1: " styleClass="labelsStl"/>
		</div>
		
		<div >
			<div class="styled-select">
				<h:selectOneMenu id="preg" value="#{headerBean.seqQuest}" styleClass="elementStlSelAddress"  >
					<f:selectItem itemLabel="Seleccione Pregunta" itemValue="" />
					<f:selectItems value="#{addNaturalPerson.securityQList}" 
								   var       = "security" 
								   itemLabel = "#{security.question}" 
								   itemValue = "#{security.securityQuestionPK.security_question_id}"/>
					<p:ajax event = "change" onstart = "return validaSelect('preg');" />
				</h:selectOneMenu>
			</div>
		</div>
	</div>
	
	<div class="dvContent">
		<div class="dvLabel">
			<h:outputText value="Respuesta: " styleClass="labelsStl"/>
		</div>		
						
		<div>
			<p:inputText type="password"  styleClass="elementStl" id="resp"  value="#{headerBean.answer}" >
				<p:ajax event="blur" onstart="return validaLenght('resp',3);" />
			</p:inputText>
		</div>
	</div>
	
	<div class="dvContent">
		<div class="dvLabel">
			<h:outputText value="Confirma tu respuesta: " styleClass="labelsStl"/>
		</div>		
						
		<div>
			<p:inputText type="password" id="confresp"  styleClass="elementStl"   >
				<p:ajax event="blur" onstart="return validaConfRes('resp','confresp');" />
			</p:inputText>
		</div>
	</div>
	
	<!-- ***************************************** -->
	<!-- ***************************************** -->
	
	<br />
	<div class="dvContent" style="margin-top: 10px;">
		<div class="dvLabel">
			<h:outputText value="Pregunta de seguridad 2: " styleClass="labelsStl"></h:outputText>
		</div>
		<div>
			<div class="styled-select">
				<h:selectOneMenu id="preg2" value="#{headerBean.seqQuest2}" styleClass="elementStlSel">
					<f:selectItem itemLabel="Seleccione Pregunta" itemValue="" />
					<f:selectItems  value="#{addNaturalPerson.securityQList}" var="security" itemLabel="#{security.question}" itemValue="#{security.securityQuestionPK.security_question_id}"/>
					<p:ajax event="change" onstart="return validaSelect('preg2');" ></p:ajax>
				</h:selectOneMenu>
			</div>
		</div>
	</div>
	
	<div class="dvContent">
		<div class="dvLabel">
			<h:outputText value="Respuesta: " styleClass="labelsStl"></h:outputText>
		</div>						
		<div>
			<p:inputText type="password"  styleClass="elementStl" id="resp2"  value="#{headerBean.answer2}" >
				<p:ajax event="blur" onstart="return validaLenght('resp2',3);" ></p:ajax>
			</p:inputText>
		</div>
	</div>
	
	<div class="dvContent">
		<div class="dvLabel">
			<h:outputText value="Confirma tu respuesta: " styleClass="labelsStl"></h:outputText>
		</div>						
		<div>
			<p:inputText type="password" id="confresp2"  styleClass="elementStl"   >
				<p:ajax event="blur" onstart="return validaConfRes('resp2','confresp2');" ></p:ajax>
			</p:inputText>
		</div>
	</div>
	
	<!-- ***************************************** -->
	<!-- ***************************************** -->
	
	<br />
	<div class="dvContent" style="margin-top: 10px;">
		<div class="dvLabel">
			<h:outputText value="Pregunta de seguridad 3: " styleClass="labelsStl"></h:outputText>
		</div>
		<div>
			<div class="styled-select">
				<h:selectOneMenu id="preg3" value="#{headerBean.seqQuest3}" styleClass="elementStlSel">
					<f:selectItem itemLabel="Seleccione Pregunta" itemValue="" />
					<f:selectItems  value="#{addNaturalPerson.securityQList}" var="security" itemLabel="#{security.question}" itemValue="#{security.securityQuestionPK.security_question_id}"/>
					<p:ajax event="change" onstart="return validaSelect('preg3');" ></p:ajax>
				</h:selectOneMenu>
			</div>
		</div>
	</div>
	
	<div class="dvContent">
		<div class="dvLabel">
			<h:outputText value="Respuesta: " styleClass="labelsStl"></h:outputText>
		</div>						
		<div>
			<p:inputText type="password"  styleClass="elementStl" id="resp3"  value="#{headerBean.answer3}" >
				<p:ajax event="blur" onstart="return validaLenght('resp3',3);" ></p:ajax>
			</p:inputText>
		</div>
	</div>
	
	<div class="dvContent">
		<div class="dvLabel">
			<h:outputText value="Confirma tu respuesta: " styleClass="labelsStl"></h:outputText>
		</div>						
		<div>
			<p:inputText type="password" id="confresp3"  styleClass="elementStl"   >
				<p:ajax event="blur" onstart="return validaConfRes('resp3','confresp3');" ></p:ajax>
			</p:inputText>
		</div>
	</div>
	
	<!-- ***************************************** -->
	
	<input type='hidden' id='valQuest' value="0" />
	<input type='hidden' id='valAns' value="0" />
	
	<h:inputHidden id="myhidden" value="#{headerBean.activeStr}"></h:inputHidden>
	<div id="dvButtonActivation" style="margin-left: auto; margin-right: auto;">
		<p:commandLink 
					onstart="return validaResp(); " 
					oncomplete="closeMessageProcessing();inicializaValoresPerfil();" 
					action="#{perfilController.addSequerityQuest}" 
					immediate="true"   
					styleClass="callActionMedium btnNaranja"
					update = ":frm-change-data"
					value="Guardar" >
			
	
		
		</p:commandLink>
	
	</div>
			
			</div>
				
</ui:composition>