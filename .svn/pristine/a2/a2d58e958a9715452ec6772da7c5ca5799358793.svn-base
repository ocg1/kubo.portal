<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<div id = "registration-reason-info" class = "alta-partner container registration-reason-info">
		<div class = "alta-partner partner-id label">
			<p class = "tipografia">Orden de aparición <sup>*</sup></p>
		</div>
		                            	
		<div class = "alta-partner partner-id input">											                                                          	                                								
			<p:inputText maxlength = "2">
				<p:ajax event = "blur" listener = "#{tablero_control.alta_partner.listener_orden_lista}" />
			</p:inputText>	                                	                                					                              	                               		  	                                                              
		</div>
		
		<div class = "alta-partner partner-id label">
			<p class = "tipografia">Activo para usuario <sup>*</sup></p>
		</div>
		
		                            	
		<div class = "partner-info input">											                                                          	                                								
			<p:selectOneRadio>
				<f:selectItem itemLabel="Sí" itemValue="S" />
	            <f:selectItem itemLabel="No" itemValue="N" />
	            
	            <p:ajax event = "change" listener = "#{tablero_control.alta_partner.listener_is_active}"/>
			</p:selectOneRadio>	                                	                                					                              	                               		  	                                                              
		</div>
		
		<div style = "clear: both; padding: 0; margin: 0; height: 0;"/>
		
		<div class = "alta-partner partner-id label">
			<p class = "tipografia">Título en lista <sup>*</sup></p>
		</div>
		                            	
		<div class = "partner-info input">											                                                          	                                								
			<p:inputText maxlength = "60">
				<p:ajax event = "blur" listener = "#{tablero_control.alta_partner.listener_titulo_lista}" />
			</p:inputText>	                                	                                					                              	                               		  	                                                              
		</div>
		
		<div style = "clear: both; padding: 0; margin: 0; height: 0;"/>
		
		<div class = "alta-partner partner-id label">
			<p class = "tipografia">Canal <sup>*</sup></p>
		</div>
		                            	
		<div class = "partner-info input">											                                                          	                                								
			<h:selectOneMenu>
				<f:selectItem itemLabel="" itemValue="" />
				
				<f:selectItems value = "#{tablero_control.alta_partner.lista_canales}" var = "channel" 
							   itemLabel = "#{channel.description}" 
							   itemValue = "#{channel.pk.channel_id}"/>	
							   
				<p:ajax event = "change" listener = "#{tablero_control.alta_partner.listener_channel}"/>										   											        
			</h:selectOneMenu>                                	                                					                              	                               		  	                                                              
		</div>	
	</div>								
</ui:composition>				