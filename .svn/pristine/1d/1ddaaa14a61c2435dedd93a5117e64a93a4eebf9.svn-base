
<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
	            xmlns:h  = "http://java.sun.com/jsf/html"
	            xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
				<div class="descripcionOferta">


		<div class="oferta">
			<h:panelGroup rendered = "#{sessionBean.area == 'M'}" >
				<h:panelGroup rendered ="#{checkScoreProcessed.offer != null and checkScoreProcessed.offer.option_selected == 1}">
					<span class="cintillo">
						
						
								<i class="fa fa-check"></i>
							 
						</span>
				</h:panelGroup>
			</h:panelGroup>
			
			<figure>
				
				
				<h:graphicImage library="img/nuevosProductos" name= "MejorTasa.jpg"  /> 
			</figure>
			
			<h4>Ofertar Kubo te Premia</h4>

			<p>Monto Actual:</p>

			<h5>#{checkScoreProcessed.promoValues[0]}</h5>

			<p>Tasa actual:</p>

			<h5>#{checkScoreProcessed.promoValues[2]}%</h5>
			
			<p>Plazo actual:</p>

			<h5>#{checkScoreProcessed.promoValues[1]} pagos #{checkScoreProcessed.promoValues[4] != null ? checkScoreProcessed.promoValues[4] : '' } </h5>

			<p>Tasa KUBO:</p>

			<h5>#{checkScoreProcessed.promoValues[3]}% </h5>
			
			<p><strong>Sin comisión por apertura</strong></p>
			
			<p><strong>Sin penalización por liquidación</strong></p>

			<p><strong>Abonos a capital en cualquier momento</strong> </p>
					

		</div>
		<h:panelGroup rendered = "#{sessionBean.area == 'L'}" >
			<div class="callAction btnGris"  onclick="noGracias(2)">No gracias</div>
		</h:panelGroup>
</div>
</ui:composition>