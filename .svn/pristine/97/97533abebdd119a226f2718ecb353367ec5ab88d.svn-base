<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:c  = "http://java.sun.com/jsp/jstl/core"
				xmlns:p  = "http://primefaces.org/ui">

	<div id    = "descStatus" 
		 align = "center" 
		 style = " width: 108px; 
		 		   float: left;">				
		<h:panelGroup id       = "statusUpdate" 
					  rendered = "#{summaryRequest.actualProyect != null and summaryRequest.actualProyect.status_id != null}" >
					  
			<p class = "detailsBoxValue">														
				<p:graphicImage width = "25" height = "25" 
								url   = "../resources#{summaryRequest.actualProyect.statusProyect.url_img}"
								title = "#{summaryRequest.actualProyect.statusProyect.name}"/>
			</p>									
			
			<h:panelGroup rendered = "#{empty summaryRequest.actualProyect.posposed_date}">
				<p class = "smallGray" align = "center">#{summaryRequest.actualProyect.statusProyect.name}</p>
			</h:panelGroup>					
		
			<h:panelGroup rendered = "#{not empty summaryRequest.actualProyect.posposed_date and summaryRequest.fechaPospuestaValida}">
				<p class = "smallGray" align = "center" style = "color: #4D4D4D;">
					#{summaryRequest.actualProyect.statusProyect.name} al
					<h:outputText value = "#{summaryRequest.actualProyect.posposed_date}">
						<f:convertDateTime pattern = "dd/MM/yyyy" />
					</h:outputText>
				</p>
			</h:panelGroup>
														
			<h:panelGroup rendered = "#{not empty summaryRequest.actualProyect.posposed_date and not summaryRequest.fechaPospuestaValida}">
				<p class = "smallGray" align = "center" style = "color: red;">
					#{summaryRequest.actualProyect.statusProyect.name} al
					<h:outputText value = "#{summaryRequest.actualProyect.posposed_date}">
						<f:convertDateTime pattern = "dd/MM/yyyy" />
					</h:outputText>
				</p>
			</h:panelGroup>
								
		</h:panelGroup>	
	</div>
</ui:composition>				