@CHARSET "UTF-8";

div.boton_agregar_nota
{
	width:auto; 
	margin-top:15px; 
	margin-left: 0; 

	border: 0px solid black;
}

div.main_agregar_nota
{
	width:350px; 
	margin-top:15px; 
	clear: both; 
	overflow:hidden; 
	
	border: 0px solid black;
}

.ui-widget select, .elementStlSel, 
.elementStlSelDay, .elementStlSelMonth, 
.elementStlSelSim, .elementStlSelYear, 
.elementStlSelLong, .elementStlSelAddress
{
	
	background-color: transparent !important;
	
}

div.main_form_agregar_nota
{
	width: auto; 
	margin:0; 
	display: none; 
	overflow:hidden; 
	
	border: 0px solid black;
}

.main_selectmenu_tipo_nota,
.main_selectmenu_prioridad
{
	width:auto;
	height: 25px;
	
	margin:10px 0;
	padding:0;
	
	overflow: hidden;	
	

	background: url(../../../../resources/img/arrow_down.png) no-repeat 96% 12px !important;
		background-size: 14px !important;
		overflow: hidden;
	
	border: solid 1px #9f9f9f !important;
	   
}

.main_selectmenu_tipo_nota select,
.main_selectmenu_prioridad select 
{ border-radius: 0;
    border: none;
    font-size: 14px;
    color: #999;	
    width: 100%;
    padding: 2px 3%  !important;
    display: block;
	 
    -moz-appearance:none;
    border: bisque;
}

div.main_textarea_nota
{
	width:auto;
	margin:0;
	
	overflow:hidden;
	
	border: 0px solid black;
}

div.main_textarea_nota .textarea_nota
{
	width:340px !important; 
	height:150px !important; 
	padding:3px !important;
	
	font-size: 16px;
	
	border: solid 1px #9f9f9f !important;
	clear: both;
}	

div.boton_guardar_nueva_nota,
div.boton_cancelar_nueva_nota
{  
	float: left; 	
}

div.boton_guardar_nueva_nota p,
div.boton_cancelar_nueva_nota p
{
	margin:0;
	margin-top:2px;
	
	padding:0;	
	
	border: 0px solid black;
}