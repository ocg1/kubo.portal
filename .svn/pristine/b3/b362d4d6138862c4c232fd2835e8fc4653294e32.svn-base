<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Frameset//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-frameset.dtd">

<html xmlns    = "http://www.w3.org/1999/xhtml"
      xmlns:h  = "http://java.sun.com/jsf/html"
      xmlns:ui = "http://java.sun.com/jsf/facelets"
      xmlns:f  = "http://java.sun.com/jsf/core"
      xmlns:p  = "http://primefaces.org/ui">	
	
	<h:head>
		<title>#{referencias_personales.page_title}</title>			       
    	
		<meta http-equiv = "Content-Type" content = "text/html; charset=UTF-8" />
		
		<script type = "text/javascript" src = "resources/js/referencias-personales.js"/>	
			<link type = "text/css" rel = "stylesheet" href = "resources/css/reset.css" />        
        <link type = "text/css" rel = "stylesheet" href = "resources/css/kubo_styles.css" />
		<script>
			$(document).ready(function()
			{
				ReferenciasPersonales.init_access_CONFIG();								
			});					
		</script>
	</h:head>
	
	<h:body style = "background:#f1f1f1;">
			<h:outputStylesheet library="css"  name="buttonSyles.css" />
		<h:outputStylesheet library="css"  name="generales_estructura_menu.css" />
		<div class="kubo_container">
		<div class="content referenciasPersonales">	
				<img style = "width:80px; height:auto; margin:0 0 15px;" src="https://www.kubofinanciero.com/Kubo/Portal/resources/images/logo_kubo.png"/>
				
				
			
				<h3>Referencias personales</h3>					
				<h4>#{referencias_personales.page_title}</h4>	
				<ui:repeat var = "reference" value = "#{referencias_personales.listReference}" varStatus = "status">
					<div class = "bloqueReferencia #{(status.index % 2) == 0 ? 'lendingAnswer' : 'lendingAnswer02'}" >
						<div><strong>#{reference.first_name != null ? reference.first_name : ""} #{reference.middle_name != null ? reference.middle_name:""} #{reference.father_last_name != null ? reference.father_last_name : ""} #{reference.mother_last_name != null ? reference.mother_last_name : ""}</strong></div>
						<div>#{reference.phone != null ? reference.phone:""}</div>
						<div>#{reference.email != null ? reference.email:""}</div>
						<div>#{reference.relationship != null ? reference.relationship : ""}</div>							
					</div>
				</ui:repeat>
				
				<div id = "lendingProfileComment">
					<p class = "gray">#{referencias_personales.noshowRefStr}</p>
				</div>
			
				<h:form prependId = "false">
					<div style = "display: none;">				
						<h:inputText id = "init-access-CONFIG" immediate = "true">
							<p:ajax event = "click"
								   	oncomplete = "ReferenciasPersonales.init_access_on_complete(xhr, status, args);"
								   	listener   = "#{referencias_personales.auditor.init_access_CONFIG}"/>
						</h:inputText>		
					</div>
				</h:form>
			</div>
		</div>	
	</h:body>
</html>	