<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<style>
	#edicion_prioridad_SOM select
	{
		font-size: 1em ! important; 
		height: 28px ! important; 
		background: none repeat scroll 0% 0% transparent ! important; 
		border: 0px none ! important; 
		box-shadow: 0px 0px 0px 0px rgb(194, 194, 194) ! important; 
		width: 415px ! important;
	}
	</style>
	
	<h:outputLabel value = "Prioridad" />
										
	<div id = "edicion_prioridad_SOM" class = "styled-select">																		
		<h:selectOneMenu value = "#{summaryRequest.notas.tipo_prioridad_SELECTED}">								 	 			   				
											 				 															
				<f:selectItems  value     = "#{summaryRequest.notas.lstNotePrioriType}" 
								var       = "prioridad" 
								itemLabel = "#{prioridad.name}" 
								itemValue = "#{prioridad.priorityTypePK.priority_type_id}"/>		
								
				<p:ajax event = "change" listener = "#{summaryRequest.notas.listener_tipo_prioridad_SELECTED}"/>																																								
		</h:selectOneMenu>																							
	</div>
	
	<div style = "clear:both"/>
</ui:composition>	