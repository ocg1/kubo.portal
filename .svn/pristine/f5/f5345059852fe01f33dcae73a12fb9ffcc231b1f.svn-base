<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:p  = "http://primefaces.org/ui">
				
	<h:panelGroup id = "uirepeatEmploy" >
		<ui:repeat id        = "uiemp" 
				   var       = "employment" 
				   value     = "#{addMyLoan.employmentList}" 
				   varStatus = "status">
				   
			<h3 class="encH3">			       		  			
     		  	<h:outputLabel rendered="#{addMyLoan.listEmployment.size() >  1}"  value="Sobre tu empleo #{status.index+1}"  />
				<h:outputLabel rendered="#{addMyLoan.listEmployment.size() == 1}"  value="Sobre tu empleo"  />
			</h3>
				       		  		
			<fieldset class="clssMyEmployment">
				<div class="dvContent2">					
					<ui:include src = "employment/nombre_empresa_patron.xhtml"/>
					<ui:include src = "employment/puesto.xhtml"/>
				    <ui:include src = "employment/antiguedad.xhtml"/>	
					<ui:include src = "employment/antiguedad_catalogo.xhtml"/>	
					<!-- ui:include src = "employment/que_te_dedicas.xhtml"/ -->
				
					<ui:include src = "employment/tipo_contrato.xhtml"/>	
					<ui:include src = "employment/recibos_nomina.xhtml"/>																	
					<ui:include src = "employment/numero_seguro_social.xhtml"/>	
					<ui:include src = "employment/telefono.xhtml"/>																	
					<ui:include src = "employment/horario_laboral.xhtml"/>					
				</div>				       		  	
			</fieldset>
				   			
			<ui:include src = "employment/domicilio.xhtml"/>							
						 		  	
		</ui:repeat>			       		  			
	</h:panelGroup>				
</ui:composition>				