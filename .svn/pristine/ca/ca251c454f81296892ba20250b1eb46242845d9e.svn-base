<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">


	<div class = "styled-select">
		<h:panelGroup id = "panel-investor-category">
			<h:panelGroup rendered = "#{summaryRequest.fondeador.investor_category_ENABLED}">
				
				<h:selectOneMenu immediate = "true" value = "#{summaryRequest.fondeador.investor_category_id}">
				
					<f:selectItem itemLabel = "Selecciona un inversionista" itemValue = "-1" />
					
					<f:selectItems value = "#{summaryRequest.fondeador.lista_investor_category}" var = "category" 
								   itemLabel = "#{category.name}" 
								   itemValue = "#{category.pk.investor_category_id}"/>
					<p:ajax event = "change"							
						    oncomplete = "investor_category_id_on_complete(xhr, status, args);" 									    
							listener   = "#{summaryRequest.fondeador.init_investor_category_id}"/>
				</h:selectOneMenu>
				
			</h:panelGroup>
		</h:panelGroup>
	</div>
<!--	
	<div id = "panel-investor-category" class = "styled-select"/>
-->		
</ui:composition>	