
.pleca {
    background: #8FC450;
    padding: 17px 4%;
    color: #fff;
    font-size: 22px;
    text-align: center;
}
.alerts.popUpLeads {
	width: 580px;
	padding:0;
	top: 120px;
}
.popUpLeads figure{
	width: 38%;
	float: right;
	padding: 30px 0 25px;
} 
.popUpLeads figure img{
	width: 77%;
	height:auto;
	margin: 0 auto;
	display: block;
} 
.popUpLeads .texto{
	width: 52%;
	float: left;
	padding: 40px 0% 0 10%;
} 
.popUpLeads .texto h3{
	font-size: 17px;
	color: #568e3e;
	margin: 0 0 3px;
	padding: 0;
	line-height: 18px;
} 
.popUpLeads .texto h4{
    font-size: 20px;
    font-weight: 700;
    color: #666;
    margin: 0 0 8px;
    line-height: 25px;
} 
.correoLead {
	width: 100%;
	overflow: hidden;
	margin: 0 0 19px;
	position:relative;
}
.correoLead small{
	position:absolute;
	top: 13px;
	right:10px;
	font-size:20px;
	color: #ccc;
	/* display: none; */
}
.alerts.popUpLeads .correoLead input{
	width: 95%;
	padding: 5px 2% !important;
	font-size: 16px;
	margin: 6px 0 0 0;
}
.popUpLeads .texto h3.negro{
	color:#333;

} 
.botonesPopUp div{
	width: 47%;
	float:left;
	font-size: 23px;
	line-height: 19px;
}
.botonesPopUp div + div{
	float:right;
	opacity: .6;
}
.botonesPopUp small{
	width: 47%;
	float:left;
	font-size: 12px;
	color: #666;
	padding:10px 0;
}
.botonesPopUp small + small{
	float:right;
}
.texto.dos {
    padding: 70px 0 0 9%;
    display: none;
}
@media (max-width:700px) {
.alerts.popUpLeads {
	width: 90%;
	padding:0;
	position:absolute !important;	
}
.popUpLeads figure{
	display:none;
} 
.popUpLeads .texto{
	width: 88%;
	padding:0 0 20px !important;
	margin:30px  auto 0px;
	float:none;
	overflow:hidden;
} 
.pleca {
    font-size: 18px;
    padding: 10px 4%;
    line-height:25px
}

.pleca strong{
   display:block;
}
.popUpLeads .texto h3{
	font-size:16px;
	margin:0 0 5px;
}
.popUpLeads .texto h4{
    font-size: 20px;
    line-height: 24px;
} 
.correoLead {
	width: 100%;
	overflow: hidden;
	margin: 0 0 19px;
	position:relative;
}
.correoLead small{
	
	top: 11px;
	
}
}