<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<div class = "field  tipo_credencial ContenedorImagenMuestra">
<div class="dvLabel">
		<label class="labelsStl">	<p>¿Qué tipo de credencial tienes? <small class="small">*</small><span class="imagenDescripcion tipoCrede"><i onclick="abrir_imagenreferencia(this);" class="fa fa-question-circle"></i></span></p></label>
		</div>
				<fieldset class="conjuntoChecks full">
				   <div class="btnN fullBtn" data-opcion="1">
			        	<span>	<strong>IFE:</strong>  Instituto Federal Electoral</span>
			       </div>
			       <div class="btnN fullBtn"  data-opcion="2">
			        	<span>	<strong>INE:</strong>  Instituto Nacional Electoral</span>
			       </div>
				<h:selectOneRadio id = "ine_ife" immediate = "true"
								  layout = "pageDirection" 
								  value  = "#{addPldDocument.naturalperson.identification_type_id}"
				 				  styleClass = "elementStlLbl validatorClass ocultaSelect" >
				 				  
					<f:selectItems value = "#{addPldDocument.lista_tipo_credencial}" 
								   var = "tipo_credencial"
								   itemLabel = "#{tipo_credencial.description}"
								   itemValue = "#{tipo_credencial.pk.identification_type_id}" />
								   
					<p:ajax event = "change" 
						    oncomplete = "listener_tipo_credencial(xhr, status, args);"
							listener   = "#{addPldDocument.listener_tipo_credencial}"/>
		             
       			</h:selectOneRadio>
				</fieldset>
		<div class = "imagen_referencia">
			<i class = "fa fa-sort-asc"/>
			
		
			<div class = "blindAction" onclick = "cerrar_imagenreferencia(this);"  >
				X
			</div>
			
			<figure>
				<img src = "../resources/img/credencial_elector/ife_ine.png"/>
			</figure>		
		</div>
	</div>				
</ui:composition>	

