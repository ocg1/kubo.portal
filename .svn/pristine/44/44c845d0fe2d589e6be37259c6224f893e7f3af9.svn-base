<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<h:panelGroup id = "pnlRecaCont" >
		
		<h:panelGroup rendered = "#{editor_documentos.gestor.reca_ENABLED}"> 
								
				<p style = "margin:10px 0;">Seleccione el numero de RECA</p>
				
				<div class = "selectNuevo" >
				
					<h:selectOneMenu immediate = "true" value = "#{editor_documentos.gestor.reca_id}">
									 														
						<f:selectItems  value = "#{editor_documentos.gestor.recaitems}" 
									    var   = "reca" 
									    itemLabel = "#{reca.reca_number}" 
									    itemValue = "#{reca.pk.reca_id}" />
									    
						<p:ajax event = "change"
								oncomplete = "Documentacion.reca_id_on_complete(xhr, status, args);" 
								listener = "#{editor_documentos.gestor.init_reca_id}"/>
					</h:selectOneMenu>
				</div>			
		
		</h:panelGroup>		
	</h:panelGroup>				
</ui:composition>				