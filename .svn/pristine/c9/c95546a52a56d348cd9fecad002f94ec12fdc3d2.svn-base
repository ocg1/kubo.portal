<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
				 xmlns:ui = "http://java.sun.com/jsf/facelets"
			     xmlns:h  = "http://java.sun.com/jsf/html"
				 xmlns:f  = "http://java.sun.com/jsf/core"
				 xmlns:p  = "http://primefaces.org/ui">
				 
	<div style = "overflow: hidden;">
		<div id = "container_full_name">#{summaryRequest.editor_nombre.full_name}</div>
		
		<ui:include src = "editor-nombre/bitacora-cambios.xhtml"/>
	</div>				 
				 
	<div id = "container_editar_full_name">	
		<ui:include src = "editor-nombre/nombres.xhtml"/>
		<ui:include src = "editor-nombre/apellidos.xhtml"/>			
		<ui:include src = "editor-nombre/guardar-cancelar.xhtml"/>		
	</div>	
	
	<div id = "error_MSG_editor_nombre" style = "display: none; padding:5px 0; clear: both;">
		<ul style = "color: red"/>			
	</div>
	
	<script>
		$("div#container_full_name").click(function()
		{		
			$("#container_editar_full_name").toggle("slow");
		});		
	</script>			 
</ui:composition>				 