<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	<div id="scrollhere" class="dvContent2">
			<!-- h:outputText value="#{msg.pr_you_want_to_do}" styleClass="etiqueta" / -->
			
		<h:panelGroup rendered = "#{false}" >

				<div class="styled-select" style="padding-top: 0px !important; background-color: #FFFFFF !important;">
					<h:selectOneMenu id="selectWantToYou" onchange="validateSelect(this);" tabindex="1" styleClass="elementStlSel validatorClass" value="#{addNaturalPerson.area}">
						<f:selectItem itemValue=""  itemLabel=""/>
						<f:selectItem itemValue="L"  itemLabel="Solicitar un préstamo" />	
						<!-- <f:selectItem itemValue="I"  itemLabel="Ser inversionista"/> -->
						<p:ajax event="change"/>																	
					</h:selectOneMenu>
				</div>
			
		</h:panelGroup>
		
		<h:panelGroup rendered="#{addNaturalPerson.area != null and addNaturalPerson.area == 'I'}" >
			<div class="dvLabel">
				
				<h:inputHidden id="valInvestment" value="true"/>
			</div>
		</h:panelGroup>
		

			<h:outputText value="#{msg.pr_name}" styleClass="etiqueta" />

		

			
			<h:panelGroup id="warningName">
				<div>
					
					<div style="color: #FF0000; font-size: 0.9em;" >
						<h:outputText escape="false" value="#{addNaturalPerson.warningName}"/>
					</div>
					
				</div>
				
			</h:panelGroup>
			
			<p:inputText id="name" 
					     onfocus="$(this).removeClass('requiredClass');" 
					     value="#{addNaturalPerson.newNaturalPerson.first_name}"  
					     styleClass="elementStl validatorClass" >
				<p:ajax event = "blur" listener = "#{addNaturalPerson.validaNombre}" update = "warningName"/>
			</p:inputText>
			<p:watermark for="name" value="Nombre"  />
			
			<!--  
			<p:tooltip id="tooltip_name" for="name" styleClass="tooltipStl" value="Escribe aquí tu primer nombre, en caso de tener mas de un nombre poner los de más en el siguiente cuadro de texto" showEvent="focus" hideEvent="blur"  showEffect="slide" hideEffect="slide" />
			-->

	</div>				
</ui:composition>				