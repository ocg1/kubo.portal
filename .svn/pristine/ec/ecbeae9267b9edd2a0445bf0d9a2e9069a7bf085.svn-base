/* CARACTERISTICAS GENERALES */
body {
	width: 100%;
	height: 100%;
	font: normal 1em Arial, Helvetica, Tahoma, sans-serif;
}

h1 {
	font-weight: bold;
	font-size: 1.5em;
}

h2 {
	font-weight: bold;
	font-size: 1.5em;
	color: #2166B2;	
}

h3 {
	font-weight: bold;
	font-size: 1.2em;
}

h6 {
	font-weight: bold;
	font-size: 1em;
}

a { 
	text-decoration: none;
	color: #0066ff;
}

a:hover {
	text-decoration: underline;
}

strong {
	font-weight: bold;
}

td, th {
	vertical-align: middle;
}

tr {
	height: 30px;
}


/* CARACTERISTICAS PARTICULARES */
.wrapper {
	margin: 0 auto;
	width: 980px;
	height: 100%;
	/*background:rgba(255,0,0,.1);*/
}

.clear {
	clear: both;
}

.detailBoxes {
	margin-bottom: 20px;
}

.mainHeader {
	/*background: rgba(0,0,0,.1);*/
	padding-bottom: 15px;
}

.mainHeader img {
	display: block;
	float: left;
	width: 200px;
}

.welcome {
	width: 780px;
	float: left;
}

.welcometext {
	font-size: 1.5em;
	font-weight: bold;
	text-align: right;
	background: #FFF;
}

.date {
	font-size: 1.0em;
	font-weight: bold;	
	text-align: right;
	color: #FF6600;
	/*background: #FF0;*/
}

.mainHeader nav {
	margin-top: 15px;
}

.mainHeader nav a {
	text-decoration: none;
	color: #4d4d4d;
	padding: 4px 4px 4px 12px;
	margin-right: 15px;
}


.mainHeader nav a:hover {
	text-decoration: none;
	margin-top: 1px;
	color: #E86421;
}

.mainHeader nav a.selected {
	color: #000;
	font-weight: bold;	
	background: #CCCCCC url(../img/orange-square.jpg) no-repeat 1px 9px;
}

section header {
	padding: 5px 0;
}

section header h1 {
	width: 350px;
	float: left;
}

.secondaryMenu {
	background: #FFF;
	display: block;
	padding: 10px 0;	
}

.secondaryMenu a {
	text-decoration: none;
	font-size: 0.9em;
	color: #b3b3b3;
	margin-right: 10px;
}

.secondaryMenu a:hover {
	/*text-decoration: underline;*/
	color: #E86421;
}

.secondaryMenu a.selected {
	color: #000;
	font-weight: normal;
}

.content {
	width: 980px;
	float: left;
}

.account {
	display: block;
	float: left;
	width: 310px;
	margin-right: 20px;
}

.accountTable tr td:nth-child(1), .accountTable tr th:nth-child(1) {
	text-align: left;
	width: 220px;
}

.accountTable tr td:nth-child(2), .accountTable tr th:nth-child(2) {
	text-align: right;
}

.accountTable tr td:nth-child(3), .accountTable tr th:nth-child(3) {
	text-align: center;
	width: 90px;
}

.accountTable tbody tr:nth-child(odd), .accountTable tfoot tr{
	background: #EEEEEE;
}

.details {
	margin-top: 10px;
	width: 310px;
	float: left;	
	font-size: 0.9em;
}

.detailsMiddle {
	margin-left: 25px; 
	margin-right: 25px;
}

.detailsBottom {
	margin-top: 25px; 
}

.detailTable {
	width: 310px;
	margin-top: 10px;
}


.detailTable tr td:nth-child(1) {
	width: 200px;
}

.detailTable tr td:nth-child(2) {
	text-align: right;
}

.detailsTableRight tr td:nth-child(2) {
	text-align: center;
}


/*.detailTable tbody tr:hover {
	background: #EEEEEE;
}*/

.detailTable tbody tr:nth-child(odd) {
	background: #EEEEEE;
}

.orange {
	color: #FF6600;
	font-size: 1.3em;
}

.gray {
	color: #4d4d4d;
	font-size: 1.3em;
}

.bigBlack {
	color: #000;
	font-size: 1.4em;
}

.black {
	color: #000;
	font-size: 1.2em;
}

#graphPie, #graphPie2 {
	width: 250px;
	height: 220px;
	margin-top: 15px;
}

#detailsPortfolioLink {
	display: block;
	float: right;
	padding-right: 80px;
}

.numTopInv{
	display: none;
}

#graphPie2{
	display: none;
}

