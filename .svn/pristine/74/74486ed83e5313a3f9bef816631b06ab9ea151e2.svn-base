<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">	

	<h:panelGroup id = "pnlAlerts" rendered = "#{sessionBean.area == 'M'}">	
		<div class = "alertsBtn" style = "left: 0px !important; width: 30px; cursor: pointer;">
			<h:commandLink  style = "text-decoration:none;" ajax="true" >
				<p:ajax event = "click" 
						listener   = "#{alertsManaged.setListType('person')}" 
						immediate  = "true" 
						oncomplete = "personalAlerts();" />
				<img src = "../resources/img/spy#{summaryRequest.alertPerson?'_active':''}.png" width="20px" height="20px" border="0" alt="Alertas sobre Persona" title="Alertas sobre Persona" />
			</h:commandLink>
		</div>
		
		<h:panelGroup id = "pnlAlertsProyect" rendered = "#{summaryRequest.prospecto.area!='I' and (!searchSummaySession.person)}">
			<div class = "alertsBtn" style = "left: 30px !important; width: 30px; cursor: pointer;" >
				<h:commandLink  style="text-decoration:none;" ajax="true" >
					<p:ajax event = "click" 
						    listener   = "#{alertsManaged.setListType('proyect')}" 
						    immediate  = "true" 
						    oncomplete = "proyectsAlerts();" />
					<img src = "../resources/img/alerts_proyect#{summaryRequest.alertProyect?'_active':''}.png" width="20px" height="20px" border="0" alt="Alertas sobre Proyecto" title="Alertas sobre Proyecto" />
				</h:commandLink>
			</div>
		</h:panelGroup>
	</h:panelGroup>
</ui:composition>	