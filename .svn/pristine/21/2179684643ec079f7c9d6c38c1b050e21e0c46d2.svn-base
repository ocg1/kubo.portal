<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
				 xmlns:ui = "http://java.sun.com/jsf/facelets"
			     xmlns:h  = "http://java.sun.com/jsf/html"
			     xmlns:p  = "http://primefaces.org/ui">
	<div class="dvContent">
		<div class="dvLabel" style="width: 400px; margin:0;">
			<p class = "editor-domicilio label">Motivo del cambio</p>
		</div>
		
		<p />
		
		<div id = "motivo_edicion_vivienda" style="width: 370px;">
			<h:inputTextarea immediate  = "true" rows = "5" 
							 styleClass = "elementTextArea validatorClass mapOff" 
							 value      = "#{summaryRequest.editor_domicilio.motivo_del_cambio}">
				<p:ajax event    = "blur" listener = "#{summaryRequest.editor_domicilio.listener_motivo_del_cambio}"/>
			</h:inputTextarea>
		</div>
	</div>			     
</ui:composition>