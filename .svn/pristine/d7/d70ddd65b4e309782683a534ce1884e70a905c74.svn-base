<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
<script>		
				function functionInternetHidden()
	{ 
		$("#inputHiddenInternet").val( 
										"" +
										($("#hasInternetElmt\\:0").is(":checked")?"1":"")
										+"::"+
										($("#hasInternetElmt\\:1").is(":checked")?"2":"")
										+"::"+
										($("#hasInternetElmt\\:2").is(":checked")?"3":"")
												
									 );
		
		$("#inputHiddenInternet").blur();
		
		$('#btnHiddenInternet').click(); 
	}
</script>
				
	<div class = "dvContent">
		<div class="dvLabel">
			<h:outputLabel styleClass="labelsStl" value="Â¿Cuentas con internet?"/>
		</div>
		
		<P />
		
		<div class = "cuenta_con" >
			<p:selectManyCheckbox styleClass = "checkStl elementStlLbl"  
								  value = "#{addMyLoan.selectedInternet}" 
								  style = "margin-top: 0px; color: #333333;" immediate="true" 
								  id = "hasInternetElmt" 
								  onchange = "functionInternetHidden()"
								  ajax = "true">
								  
				<f:selectItem  itemValue = "1" itemLabel = "Casa" />
				<f:selectItem  itemValue = "2" itemLabel = "Empleo"  />
				<f:selectItem  itemValue = "3" itemLabel = "Negocio" />
				
				<p:ajax event="click" />
			</p:selectManyCheckbox>
		</div>
	</div>
	
	<div style="display:none" >
		
		<h:inputText id = "inputHiddenInternet" value ="#{addMyLoan.strInternetHidden}" >
			<p:ajax event = "blur" />
		</h:inputText>
	
		<p:commandLink id = "btnHiddenInternet" 
		 			   ajax      = "true" 
		 			   immediate = "true"
					   actionListener = "#{addMyLoan.listener_has_internet}" />
	
	</div>
	
	
</ui:composition>				