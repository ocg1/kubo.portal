<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	<p:outputPanel id="pnlReferencesPhone">
	
		<div id="dvContPnlPreferencesPhone" style="display:none;">
		
			<table style='width: 410px;color:#333333; border: solid 1px #e6e6e6;'>
												
				<tr>				
					<td>				
						<h:outputLabel value="Teléfono proporcionado como referencia por #{p.lstReferences.size() > 1 ? 'los siguientes prospectos:':'el siguiente prospecto:'}"/>
					</td>	
				</tr>

				<ui:repeat var="per" value="#{summaryRequest.telefono.lstReferences}">
					<tr>
						<td style="border-top:solid 1px #333">
						
							<span >
								Cliente  <b>#{per.tracking_id}</b>
							</span>
							<br/>
							<span style="font-weight: bold;">
								#{per.nombreCliente}
							</span>
							<br/>
							<span >
								Crédito: <b>#{per.montoSolicitado}</b>
							</span>
							<br/>
							<span >
								Status: <b>#{per.status}</b>
							</span>
							<br/>
							<br/>
							<span >
								Referencia
							</span>
							<br/>
							<span style="font-weight: bold;">
								#{per.nombreReferencia}
							</span>
							<br/>
							<span >
								Teléfono: <b>#{per.telefonoReferencia}</b>
							</span>
							<br/>
							<span >
								E-mail: <b>#{per.email}</b>
							</span>
							<br/>
						
						</td>
					
					</tr>
																				
				</ui:repeat>
				
			</table>
		
		</div>
	
	</p:outputPanel>				
</ui:composition>				