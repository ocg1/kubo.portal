<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<h4 style = "margin: 15px 0px;">Seleccionar el comportamiento</h4>
	
	<h:selectOneMenu immediate = "true" style = "width: 100%; height: 30px; padding: 29px 0px 0px 3px;">
		<f:selectItem itemLabel="" itemValue = "-1" />
	
		<f:selectItems var = "behavior" 
					   value     = "#{summaryRequest.inusual.lista_unusual_behavior}"
					   itemValue = "#{behavior.pk.unusual_behavior_id}" 
					   itemLabel = "#{behavior.description}"/>
					   
		<p:ajax event = "change"
				oncomplete = "Inusual.behavior_id_on_complete(xhr, status, args);" 
				listener   = "#{summaryRequest.inusual.init_behavior_id}"/>
	</h:selectOneMenu>							
</ui:composition>				