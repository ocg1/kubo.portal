<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	
	<h:panelGroup rendered = "#{!activityPerson.panel_inversionista_ENABLED}">
		<br />
		
			<hr />
		
		<br />	
		
		<table>	
			<tr>		
				<td width="230px"  >Fecha de registro:</td>
				<td>
					<b>
						<h:outputText value="#{activityPerson.membership.creation_date}">
					        <f:convertDateTime pattern="EEEE dd 'de' MMMM 'de' yyyy ' a las ' hh:mm a " />
					    </h:outputText>
					</b>
				</td>		
			</tr>
			
			<tr>
				<td width="230px" >Activaci√≥n:</td>			
				<td><b><h:outputText value="#{activityPerson.activationDateStr}" styleClass="#{activityPerson.activationDateStr.length() gt 24 ? '':'clsActv'}"/></b></td>
			</tr>
			
			<tr>
				<td width="230px" >Consulta:</td>
				<td><b>#{activityPerson.fechaConsulta}</b></td>
			</tr>
			
			<tr>
				<td colspan="2" >				
					<p:commandLink 	id             = "updateConsulAction" 
								   	immediate      = "true" 
								   	onstart		   = "return displayMessageProcessing('msgprocessing', false);"
								   	actionListener = "#{activityPerson.updateConsulting}" 
								   	oncomplete	   = "returnActivityAction();"
								   	update         = "pnlCntActivity" 
								   	style          =  "width:120px; display:block" >				
										   
						<div  class="btn_verde">Actualizar</div>								
					</p:commandLink>
				</td>
			</tr>		
		</table>	
	</h:panelGroup>			
</ui:composition>				