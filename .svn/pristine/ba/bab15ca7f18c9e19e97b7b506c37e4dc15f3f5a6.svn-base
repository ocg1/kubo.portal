<ui:composition xmlns   = "http://www.w3.org/1999/xhtml"
			    xmlns:h = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<div class = "field">
		<div class = "dvLabel">
			<h:outputLabel styleClass = "labelsStl" value = "¿Actúas por cuenta propia o a nombre de un tercero?*"/>
		</div>
		
	<fieldset class="conjuntoChecks">
				   <div class="btnN dosBtnChecks" data-opcion="P">
			        	<span>Propios</span>
			       </div>
			       <div class="btnN dosBtnChecks btnR"  data-opcion="T">
			        	<span>	Terceros</span>
			       </div>
			<h:selectOneRadio id = "actuaPorCuenta"  
						      value = "#{addPldDocument.prevencionld.for_third_party}" 
						      styleClass = "actuaPorCuenta elementStlLbl validatorClass elementStlRd hs_class ocultaSelect">
						      
			    <f:selectItem itemValue = "P" itemLabel="Propios"/>
			    <f:selectItem itemValue = "T" itemLabel="Terceros"/>
			    
			    <p:ajax event = "click" update = "pnlThirdPartyPerson"			    		 
			    		listener   = "#{addPldDocument.savePrevencionLD}"
			    		oncomplete = "Documentacion.for_third_party_on_complete(xhr, status, args);" />
			</h:selectOneRadio>
		</fieldset>
		
		<ui:include src = "third_party/declaracion.xhtml"/>
		
	</div>  
		
	<script>
	
	propios_terceros();
	
	</script>		  
					
</ui:composition>				