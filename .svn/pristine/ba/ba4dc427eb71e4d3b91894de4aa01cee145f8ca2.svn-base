<ui:composition  xmlns    = "http://www.w3.org/1999/xhtml"
				 xmlns:ui = "http://java.sun.com/jsf/facelets"
			     xmlns:h  = "http://java.sun.com/jsf/html"
				 xmlns:f  = "http://java.sun.com/jsf/core"
				 xmlns:p  = "http://primefaces.org/ui">
	
	<div id = "msg_error_edicion_vivienda" style = "display: none; padding:5px 0">
		<p style = "color: red"/>
	</div>
	
	<div class = "dos_botones" style = "clear: both;">			
		<h:commandLink value = "Guardar" immediate = "true" styleClass = "buttonPR">
					   
			<p:ajax event = "click" update = "vivienda" 
					oncomplete = "ActividadDomicilio.update_address(xhr, status, args);"
					listener = "#{summaryRequest.domicilio_actividad.update_address}"/>
					
		</h:commandLink>	
											 	
		<div class = "buttonPR"  onclick = "ActividadDomicilio.cancelar();">
			Cancelar		  
		</div>
	</div>				 
</ui:composition>	