<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

		<li>
			
		<h:panelGroup  id="scrollhere" rendered = "#{false}" >

				<div class="styled-select" style="padding-top: 0px !important; background-color: #FFFFFF !important;">
					<h:selectOneMenu id="selectWantToYou" onchange="validateSelect(this);" tabindex="1" styleClass="elementStlSel validatorClass" value="#{addNaturalPerson.area}">
						<f:selectItem itemValue=""  itemLabel=""/>
						<f:selectItem itemValue="L"  itemLabel="Solicitar un prÃ©stamo" />	
						<!-- <f:selectItem itemValue="I"  itemLabel="Ser inversionista"/> -->
						<p:ajax event="change"/>																	
					</h:selectOneMenu>
				</div>
			
		</h:panelGroup>
		
		<h:panelGroup rendered="#{addNaturalPerson.area != null and addNaturalPerson.area == 'I'}" >
			<div class="dvLabel">
				
				<h:inputHidden id="valInvestment" value="true"/>
			</div>
		</h:panelGroup>
				<label> Tu nombre <sup>*</sup></label>
			
				<h:panelGroup id="warningName">
					<div>					
						<div style="color: #FF0000; font-size: 0.9em;" >
							<h:outputText escape="false" value="#{addNaturalPerson.warningName}"/>
						</div>
						
					</div>
					
				</h:panelGroup>
			</li>
			<li>
				<p:inputText id="name" 
						     onfocus="$(this).removeClass('requiredClass');" 
						     value="#{addNaturalPerson.newNaturalPerson.first_name}"  
						     styleClass="elementStl validatorClass" >
					<p:ajax event = "blur" listener = "#{addNaturalPerson.validaNombre}" update = "warningName"/>
				</p:inputText>
				<p:watermark for="name" value="Nombre"  />
				<div class="alerta"></div>
			</li>

			
</ui:composition>				