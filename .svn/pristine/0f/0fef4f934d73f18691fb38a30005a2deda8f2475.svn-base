<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<div class="profileControlTable AcercaProyecto" style="display: none;">
		<div  class="centerPosition">																
			<h3 class="tab"><strong class="orange">Acerca del proyecto(*)</strong></h3>	
			
			<ui:include src = "tooltip/acerca_del_proyecto.xhtml"/>
										
		<h:panelGroup rendered = "#{summaryRequest.actualProyect!=null}">
		<script>
		function isEmpty( el ){
		      return !$.trim(el.html())
		  }
		  
		$(".AcercaProyecto .Q").each(function() {
			var bloquePregunta = $(this);
			var respuesta = bloquePregunta.find(".lendingAnswer");
			if(  isEmpty(respuesta)){
				bloquePregunta.hide();
			}
		});
		</script>
			<div class = "lendingProfileData" style = "clear:both">								
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft"><strong>Sobre #{summaryRequest.alias}</strong></p>
				<p class="lendingAnswer">#{summaryRequest.aboutMe}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft"><strong>El proyecto</strong></p>
				<p class="lendingAnswer">#{summaryRequest.proyectName}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft"><strong>El lema o frase que identifica al proyecto</strong></p>
				<p class="lendingAnswer">#{summaryRequest.tagLine}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableloadActionLeft">
					<strong>
						Para qué quiere el préstamo
						<br />
						<span style="font-size:0.85em;" >(Anteriormente Sus pasatiempos favoritos)</span>
					</strong>
				</p>
				<p class="lendingAnswer">#{summaryRequest.goal}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft"><strong>¿Para qué va a usar el préstamo?</strong></p>
				<p class="lendingAnswer">#{summaryRequest.benefits}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft">
					<strong>
						¿Porque se considera sujeto de crédito?
					</strong>
				</p>
				<p class="lendingAnswer">#{summaryRequest.reason}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft">
					<strong>
						¿Qué empresas le han prestado dinero? ¿Ha pagado puntualmente? Si ha tenido algún atraso explicar por qué
					</strong>
				</p>
				
				<p class="lendingAnswer">#{summaryRequest.proyecto.other_debts}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft">
					<strong>
						 Por qué quiere contratar con nosotros su préstamo?
						<br />
						<span style="font-size:0.85em;" >(Anteriormente ¿Cuándo fue el último préstamo que sacó y para qué lo utilizó?)</span>
					</strong>
				</p>
				<p class="lendingAnswer">#{summaryRequest.proyecto.why_us}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft"><strong>Desde dónde capturó la solicitud</strong></p>
				<p class="lendingAnswer">#{summaryRequest.member.fromwhere_id==255?summaryRequest.member.fromwhere_other:summaryRequest.member.fromWhereCat.name}</p>
			</div>
			<div class="Q">
				<p class="lendingQuestion lendingTableLeft"><strong>Quien llenó la solicitud</strong></p>
				<p class="lendingAnswer">#{summaryRequest.member.who_answered_id==99?summaryRequest.member.who_answered_other:summaryRequest.member.whoAnswerCat.name}</p>
			</div>
			<ui:repeat var="listBusiness" value="#{summaryRequest.listBusiness}">
				<!-- <p class="lendingQuestion lendingTableLeft"><strong>Acerca</strong></p>
				<p class="lendingAnswer">#{listBusiness.business_description}</p> -->
				<div class="Q">
					<p class="lendingQuestion lendingTableLeft"><strong>Acerca del negocio</strong></p>
					<p class="lendingAnswer">#{listBusiness.about_your_business}</p>
				</div>
				<div class="Q">
					<p class="lendingQuestion lendingTableLeft"><strong>Desde cuándo se dedica a esto</strong></p>
					<p class="lendingAnswer">#{listBusiness.experience_detail}</p>
				</div>
				<!-- <p class="lendingQuestion lendingTableLeft"><strong>Desde cuándo inicio el negocio</strong></p>
				<p class="lendingAnswer">#{listBusiness.since_when_detail}</p> -->
				<div class="Q">
					<p class="lendingQuestion lendingTableLeft"><strong>¿Cuáles son sus logros y retos?</strong></p>
					<p class="lendingAnswer">#{listBusiness.business_goal}</p>
				</div>
			</ui:repeat>
			
			<ui:repeat var="listEmployment" value="#{summaryRequest.listEmployment}">
				<div class="Q">
					<p class="lendingQuestion lendingTableLeft"><strong>A que se dedica</strong></p>
					<p class="lendingAnswer">#{listEmployment.about_my_job}</p>
				</div>
			</ui:repeat>
			
			<h:panelGroup rendered="#{summaryRequest.proyecto.owe_family=='N'}">
			<p class="lendingQuestion lendingTableLeft"><strong>No le debe a familiares, amigos y/o prestamistas</strong></p>
			</h:panelGroup>
			<h:panelGroup rendered="#{summaryRequest.proyecto.owe_family=='S'}">
			<p class="lendingQuestion lendingTableLeft"><strong>Cuánto le debe a familiares, amigos y/o prestamistas</strong></p>
			<p class="lendingAnswer">#{summaryRequest.proyecto.owe_family_text}</p>
			</h:panelGroup>
			
		</div>
		
		<div id="lendingProfileComment">
			<p class="gray">(*) Respuestas de #{summaryRequest.alias} a los cuestionarios de kubo.financiero</p>
		</div>
		</h:panelGroup>
		</div>
	</div>
</ui:composition>	