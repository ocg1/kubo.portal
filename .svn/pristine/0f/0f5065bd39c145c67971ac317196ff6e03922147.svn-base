<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:p  = "http://primefaces.org/ui">
				
	<div class = "details1 left">
		<div style = "overflow: visible;">
			<p style = "float:left; font-weight: bold;">CURP</p>
		
			<ui:include src = "editor-curp/bitacora.xhtml" />
		</div>	
										
		<p:inplace id = "sectionEditCurp" 
		 		   widgetVar = "editCurp" 
		 		   rendered  = "#{summaryRequest.changeActions}" 
		 		   label = "#{summaryRequest.persona.mx_curp}" >
		
			<p:ajax event = "save" 
					onstart  = "return validationChangeCurp('txt-mxcurp');" 
					update   = "section-edit-curp" 
					listener = "#{summaryRequest.editor_CURP.listener_guardar_cambios}"/>
		 	
		 	<ui:include src = "editor-curp/curp.xhtml" />		 							 	
			<ui:include src = "editor-curp/motivo.xhtml" />
			<ui:include src = "editor-curp/guardar-cancelar.xhtml" />
		</p:inplace>
	
		<h:panelGroup rendered = "#{!summaryRequest.changeActions}" >
			
			<p>#{summaryRequest.persona.mx_curp}</p>
			
		</h:panelGroup>								
	</div> 			
</ui:composition>