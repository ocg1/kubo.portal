<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"				
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

			<div class="dvContent">
				<div class="dvLabel" style="width:auto">
					<h:outputLabel styleClass="labelsStl" value="#{msg.Who_answered_text}"/>
				</div>
				
				<p/>
				
				<div  class="dvElementLength">
					<div class="selectNuevo">					
						<h:selectOneMenu id="cbo-who-answered" 
										 tabindex="10" 
										 value="#{addMyLoan.thisMembership.who_answered_id}"
										 styleClass="elementStlSelAddress selectchange" >
										 
							<f:selectItem itemValue=""  itemLabel=""/>
							
							<f:selectItems value = "#{addMyLoan.listWhoAnswered}" 
										   var   = "whoAns" 
										   itemLabel = "#{whoAns.name}" 
										   itemValue = "#{whoAns.whoAnsweredCatPk.who_answered_id}"/>
										   
							<p:ajax event="change" update="show-who-other" listener="#{addMyLoan.updateMembership}"/>												  
						</h:selectOneMenu>		
					</div>					
				</div>
			</div>
</ui:composition>	