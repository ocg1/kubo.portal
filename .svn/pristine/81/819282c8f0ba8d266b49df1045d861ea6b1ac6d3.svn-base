<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<div class = "dvContent">
		<div class = "dvLabel">
			<h:outputLabel styleClass = "editor-domicilio label" value = "#{msg.Neighborhood_text}" />
		</div>
				
		<div class = "dvElementAddres1">
			<div class = "selectNuevo">
				<h:selectOneMenu id = "activity-neighborhood-id" 
								 value = "#{summaryRequest.domicilio_actividad.address.neighborhood_id}" 
								 styleClass = "validatorClass mapClass neighborhood editor-domicilio input-text">
								 
					<f:selectItem itemLabel = "Selecciona..." itemValue = "0" />
					
					<f:selectItems value = "#{summaryRequest.domicilio_actividad.lista_neighborhood}" 
								   var = "neighborhood" 
								   itemLabel = "#{neighborhood.name}" 
								   itemValue = "#{neighborhood.neighborhoodCatPK.neighborhood_id}" />
					
					<p:ajax event = "change"
							oncomplete = "ActividadDomicilio.neighborhood_id_oncomplete(xhr, status, args);" 
						    listener = "#{summaryRequest.domicilio_actividad.init_neighborhood_id}"/>
				</h:selectOneMenu>
			</div>
		</div>
	</div>				
</ui:composition>	