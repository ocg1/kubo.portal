<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<p>Seleccione el tipo de telefono</p>
	
	<div class="selectNuevo">	
		<h:selectOneMenu id = "select-type_phone" immediate = "true"
						 value = "#{editor_telefono.newAddPhone.phone_type_id}">
					     
			<f:selectItem itemValue = "0" itemLabel = ""/>
			
			<f:selectItems value = "#{editor_telefono.listPhoneType}" var = "phonetype" 
						   itemLabel = "#{phonetype.name}" 
						   itemValue = "#{phonetype.phoneTypePk.phone_type_id}"/>
						   
			<p:ajax event = "change"
					oncomplete = "EditorTelefono.phone_type_oncomplete(xhr, status, args);" 
					listener = "#{editor_telefono.init_phone_type}"/>															
		</h:selectOneMenu>																						
	</div>						
</ui:composition>				