<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<script type = "text/javascript">
	$(document).ready(function() {
		inicializaValores2();
		
		$(".item").removeClass("descValGreen");
		$(".item").removeClass("descValOrange");
		$(".item").addClass("descVal");
		
		$('.crea_contrasena2').click(function(){
	
			 $('html, body').animate({scrollTop:0}, 'slow');
		  	 $('#passHelp').fadeIn();
	
		  		 
		});
		
				 $(".elige_opcion").hide();
	
		
	 });
	</script>
	
	<div class="block_form">
		<p class="crea_contrasena2">Nueva contrase√±a<!-- h:outputLabel value = "#{msg.Text_new_pass}" /> #{msg.Text_new_pass} -->	</p>
	<div id = "dvMsg"/>
		<h:inputSecret id = "pass3" value = "#{forgotPass.newPass}" styleClass = "validatePass validatorClass pass_help">
			<p:ajax event      = "blur" 
				    listener   = "#{forgotPass.validaifExistPass}" 
				    oncomplete = "validaExistPass(xhr, status, args);" 
				    update     = "pnlButtonSave" />
		</h:inputSecret>
		<p><h:outputLabel value="#{msg.Text_conf_pass}" /></p>
		<h:inputSecret value = "#{forgotPass.newPassConf}" styleClass = "validatorClass key_enter">
			<p:ajax event = "blur"/>
		</h:inputSecret>
	
	
	<h:inputHidden id = "boolQuest" value = "#{forgotPass.displayQuestion}" />
	
	<h:panelGroup rendered = "#{forgotPass.displayQuestion}">
		<ui:include src = "asignar_preguntas_seguridad.xhtml"/>
	</h:panelGroup>	
		<h:panelGroup id = "pnlButtonSave">
			<h:panelGroup rendered = "#{forgotPass.displayButtonSave}">
				<p:commandLink immediate  = "true"
							   actionListener     = "#{forgotPass.saveNewPassword}"
							   update     = "gral-validation error" 							    							     							    
							   styleClass = "cont link-login callActionMedium btnVerde-2 "
							   oncomplete ="checkPass(xhr, status, args); "
							   onstart    = "return validatepass();"  
							   value = "#{msg.Btn_next_next}" 
		
								>
				

				</p:commandLink>
			</h:panelGroup>	
		</h:panelGroup>	
	
												
	<h:inputHidden id = "name4"  value = "#{forgotPass.name}"/>
	<h:inputHidden id = "email5" value = "#{forgotPass.email}"/>					
	</div>									
</ui:composition>														