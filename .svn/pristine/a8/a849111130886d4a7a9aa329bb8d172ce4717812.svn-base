<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<h:panelGroup id = "beneficiaries">
		<h:inputHidden value = "#{ibeneficiaries.sizeBenefic}" />
		
		<h:dataTable var = "benefic" value = "#{ibeneficiaries.listBenefi_ciaries}">
			<h:column>
				<ui:include src = "beneficiarios_INFO.xhtml"/>
				
				<h:panelGroup rendered="#{ibeneficiaries.person.country_of_residence != null and ibeneficiaries.person.country_of_residence != 1}" >
					<ui:include src = "../vivienda/vivienda.xhtml"/>
				</h:panelGroup>
				
				<ui:include src = "../vivienda/remote-command.xhtml"/>
				
				<ui:include src = "porcentaje-beneficiario.xhtml"/>
			
			</h:column>				
		</h:dataTable>			
	</h:panelGroup>		
	
	<div id = "remote-beneficiarios" style = "display: none;">	
		<h:commandLink class = "init-lista-beneficiarios" immediate = "true">
			<p:ajax event = "click" update = ":frm_beneficiaries:beneficiaries"					
					oncomplete = "Beneficiario.lista_beneficiarios_oncomplete(xhr, status, args);"
					listener = "#{ibeneficiaries.init_beneficiarios}"/>
		</h:commandLink>
	</div>		
</ui:composition>				