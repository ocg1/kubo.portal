<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<h:panelGroup rendered = "#{summaryRequest.isYears lt 18 }">
						
		<h:panelGroup id = "pnlTutor" rendered = "#{summaryRequest.imTutor == null }">
				
			<ui:include src = "tutor/agregar.xhtml"/>	
													
			<h:panelGroup rendered = "#{summaryRequest.thisTutor != null }">								
				<div style="width: auto; margin-left: auto; margin-right: auto; padding: 10px; border: solid 1px #e6e6e6; background-color: rgb(255, 211, 105); " >
					
					El usuario aún no cuenta con la mayoría de edad, su tutor es la persona <b>#{summaryRequest.personTutor.natPerPK.prospectus_id} #{summaryRequest.personTutor.NombreCompletoNPM()}</b>.<br />
					
				</div>								
			</h:panelGroup>								
		</h:panelGroup>							
	</h:panelGroup>		
	
	<h:panelGroup id = "pnlImTutor" rendered = "#{summaryRequest.imTutor != null and summaryRequest.imTutor.size() gt 0 }">
				
		<div style="width: auto; margin-left: auto; margin-right: auto; padding: 10px; border: solid 1px #e6e6e6; background-color: rgb(255, 211, 105); " >									
			<h:panelGroup rendered="#{summaryRequest.imTutor.size() gt 1 }" >
				El usuario es tutor de las siguientes personas.<br />
			</h:panelGroup>
			
			<h:panelGroup rendered="#{summaryRequest.imTutor.size() lt 2 }" >
				El usuario es tutor de la siguiente persona.<br />
			</h:panelGroup>
			
			<ui:repeat id="mypersonTutors" var="perTut" value="#{summaryRequest.imTutor}" varStatus="status">
				<div style="padding: 8px;" >* #{perTut.natPerPK.prospectus_id} #{perTut.NombreCompletoNPM()}</div>
			</ui:repeat>								
		</div>						
	</h:panelGroup>
</ui:composition>				