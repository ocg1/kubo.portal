<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	<div class="dvContent2">
			<h:outputText value="#{msg.pr_email}" styleClass="etiqueta" />
			
		<div class="mensaje_error">
			
			<h:panelGroup id="warningMail">
				<div>
						
					<div style="color: #FF0000; font-size: 0.9em;" >
						
						<h:outputText escape="false" value = "#{addNaturalPerson.warningMail}"/>
						
					</div>
					
				</div>
			</h:panelGroup>
		
			<p:inputText id         = "email"  
						 onfocus    = "$(this).removeClass('requiredClass');" 
						 value      = "#{addNaturalPerson.email}" 
						 styleClass = "elementStl validatorClass" 
						 disabled   = "#{addNaturalPerson.disabledMail}" >
						 
				<p:ajax event    = "blur" 
						listener = "#{addNaturalPerson.listener_email}" 
						update   = "warningMail" />
			</p:inputText>
			
			<p:watermark for="email" value="Correo electrÃ³nico"  />
		
		</div>
	</div>				
</ui:composition>				