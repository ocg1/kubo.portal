div#remote-identification-type
{
	display: none;
}

div#section-data-identification-type
{
	clear: both;
	padding: 5px 0;
}

div#section-data-identification-type div
{
	overflow: hidden;
	padding: 5px 0;
}

div#section-data-identification-type div strong
{
	float: left;
}

div#section-data-identification-type div i
{
	float: right;
	margin: 3px 10px 0 0;
}

div#section-data-identification-type div:hover
{
	background-color: #4D4D4D;
	color: #fff;
	cursor:pointer;		
}

div.wrap-btn-editoridentification
{
	width: 100%;
	overflow: hidden; 
	background: #f1f1f1;
}

.btn_editor_identification
{
	width: 49%;
	padding: 6px 0;
    border-radius: 5px;
    font-weight: 700;
    font-family: 'Open Sans', sans-serif;
    font-size: 15px;
    text-align: center;    
    cursor: pointer;
}

div.btn_editor_identification a
{
	color: #fff;
	text-decoration: none;	
}

.btn_cancelar
{	       
    background: #625f5f;
    border-bottom: solid 2px #333;	
    float: left;
}

.btn_aceptar
{
	background-color: #ff8a02;
    border-bottom: solid 2px #DB8D13;
    float: right;
}