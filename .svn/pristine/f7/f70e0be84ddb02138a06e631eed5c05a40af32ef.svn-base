<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">	
				
	<div class = "details4 left" style = "position: relative;">					
		<table class = "formato_tablas">
			<tbody>
				<tr>
					<th colspan = "2"><b>Indicadores</b></th>
				</tr>
				
				<tr>
					<td style = "text-align: left; width: 200px;">Liquidez requerida:</td>
					<td >#{incomesExpenses.indicador.liquidezReq} veces</td>
				</tr>																															
			</tbody>																
		</table>
		
		<table class = "formato_tablas">
			<tr>
				<td colspan = "2" align = "center">
					<b>Liquidez del acreditado</b>
				</td>
			</tr>
							
			<tr>
				<td align="center">Cliente</td>
				<td align="center">Mesa de control</td>
			</tr>
							
			<tr>
				<td>
					<table>
						
						<tr>
							<td width="175px;">Excedente:</td>
							
							<td style="border-bottom: solid 2px #333333;">
								<h:outputText value="#{incomesExpenses.indicador.excedente}">
									<f:convertNumber maxFractionDigits="0" minFractionDigits="0" currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
								</h:outputText>
							</td>
							
							<td rowspan="2" valign="middle" style="vertical-align: middle !important;padding-left: 4px;">
								= <b>#{incomesExpenses.indicador.liquidezCli} veces</b>
								<p:graphicImage url="../resources/img/Bullet.png"    rendered="#{incomesExpenses.indicador.dispOKCl}" style="margin-left:10px;" />
								<p:graphicImage url="../resources/img/warning01.png" rendered="#{incomesExpenses.indicador.dispWarnCl}" width="20px" height="20px" style="margin-left:10px;" />
							</td>
						</tr>
										
						<tr>
							<td>Cuota del préstamo:</td>
							<td >
								<h:outputText value = "#{incomesExpenses.indicador.pagoMen}">
									<f:convertNumber maxFractionDigits="0" minFractionDigits="0" currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
								</h:outputText>
								
							</td>
						</tr>
					</table>
				</td>
				
				<td style=" font-size: .96em;">
					<div id = "negotiationBtn" onclick = "IncomesExpenses.init_loan_negotiation();">
						<p:graphicImage url="../resources/img/change-icon.png" style="margin-left:3px;" width="18px" height="18px" />							
					</div>
									
					<table>
						<tr>
							<td width="175px;">Excedente:</td>
							<td style="border-bottom: solid 2px #333333;">
								<h:outputText value="#{incomesExpenses.ammountConsolidate.excedentConsolidate}">
									<f:convertNumber maxFractionDigits="0" minFractionDigits="0" currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
								</h:outputText>
							</td>
							
							<td rowspan="2" valign="middle" style="vertical-align: middle !important;padding-left: 4px;">
								= <b>#{incomesExpenses.indicador.liquidezCliControl} veces</b>
								<p:graphicImage url="../resources/img/Bullet.png"    rendered = "#{incomesExpenses.indicador.dispOKControl}" style="margin-left:10px;" />
								<p:graphicImage url="../resources/img/warning01.png" rendered = "#{incomesExpenses.indicador.dispWarnControl}" width="20px" height="20px" style="margin-left:10px;" />																																	
							</td>
						</tr>
										
						<tr>
							<td>Cuota del préstamo:</td>
							<td>												
								<h:outputText value = "#{incomesExpenses.indicador.pagoMenControl}">
									
									<f:convertNumber maxFractionDigits="0" minFractionDigits="0" currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>
																		
								</h:outputText>							
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	</div>							
</ui:composition>