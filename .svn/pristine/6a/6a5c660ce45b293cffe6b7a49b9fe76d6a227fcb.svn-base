<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<div style = "display: none;">
		<h:form id = "frmMail">
			<h:inputText id    = "mailforward" 
						 value = "#{addNaturalPerson.forwardMail}" >
						 
				<p:ajax event    = "blur" 
						listener = "#{addNaturalPerson.setForwardMailAction}" />
			</h:inputText>
			
			<h:commandLink id = "mailAction" action = "#{addNaturalPerson.forwardMailAction}" />
			
			<p:inputText    id = 		"mailforwardChng" 
			             	value = 	"#{addNaturalPerson.forwardMailChng}"
			             	immediate=	"true" >
			          
				<p:ajax event      = "blur" 
						listener   = "#{addNaturalPerson.setChangeMailAction}"  />
						
			</p:inputText>				
			
			<h:commandLink id = "changeMailAction" action="#{addNaturalPerson.changeMail}" />		
			
		</h:form>
	</div>
</ui:composition>