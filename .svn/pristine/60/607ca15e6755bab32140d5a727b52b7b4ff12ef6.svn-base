<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
	  			xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	<h:panelGroup>
	
		
		
		<div class = "field recibir_transferencia">
			<div class = "dvLabel">
					<h:outputLabel value = "¿Te gustaría recibir una transferencia?" styleClass = "labelsStl"/>
			</div>
				
  		
  				<fieldset class="conjuntoChecks">
				   <div class="btnN dosBtnChecks" data-opcion="1">
			        	<span>	<i class="fa fa-check"></i> Sí</span>
			       </div>
			       <div class="btnN dosBtnChecks btnR"  data-opcion="0">
			        	<span>	<i class="fa fa-times"></i> No</span>
			       </div>
					<h:selectOneRadio id         = "hasaccount"  
									  value      = "#{deal.selAccount}"
									  styleClass = "elementStlLbl validatorClass hs_class ocultaSelect">
	            		<f:selectItem itemValue = "1" itemLabel = "Si"/>
	             		<f:selectItem itemValue = "0" itemLabel = "No"/>
	             		<p:ajax event    = "click" 
	             				listener = "#{deal.selectAccount}" 
	             				update   = "accountData"
	             				oncomplete="conjuntoCombos();" />
	         		</h:selectOneRadio>
         		</fieldset>
			
		</div>
	
	</h:panelGroup>				
</ui:composition>				