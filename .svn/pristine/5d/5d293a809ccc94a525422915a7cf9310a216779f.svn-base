<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:p  = "http://primefaces.org/ui">	
	<div>
		<h1 class = "sim_desc">Plazo</h1>
		
		<h:inputText id  = "termNeg" immediate="true"
					 value = "#{incomesExpenses.negotiation != null ? incomesExpenses.negotiation.term_id : ''}"
					 styleClass = "elementAddresMin" maxlength  = "3" required   = "true">
		                  						 
			<p:ajax event = "change" update = "resSimRegNeg catSimRegNeg pnlIndicadoresControl btnCondiciones indice_pago_deudas indice_pago_deudas_mesa_control"
					 onstart    = "return simOnStartVal();" 
					 oncomplete = "return showRes();"  
					 listener   = "#{incomesExpenses.modifier.modificaCondiciones}" />  
		</h:inputText>
	</div>				
</ui:composition>				