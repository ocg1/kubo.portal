<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
	<div class="field">
		<div class="dvLabel">
			<h:outputLabel styleClass="labelsStl" value="#{msg.Company_time_text}" />
		</div>
		
	
		<div class="selectNuevo">						
			<h:selectOneMenu id        = "employment_antiguedad" 
							 value      = "#{employment.employment.tenure_id}"
						     tabindex   = "19" 
						     styleClass = "validatorClass hs_class">
						     
				<f:selectItem itemValue = "" itemLabel = "Selecciona..." />
				
				<f:selectItems value     = "#{addMyLoan.lista_tenure}" 
							   var       = "tenure" 
							   itemLabel = "#{tenure.name}" 
							   itemValue = "#{tenure.tenureCatPK.tenure_id}" />
							   
				<p:ajax event = "change" listener = "#{addMyLoan.updateEmployment(employment)}" />						
			</h:selectOneMenu>		
		</div>
	</div>
</ui:composition>				