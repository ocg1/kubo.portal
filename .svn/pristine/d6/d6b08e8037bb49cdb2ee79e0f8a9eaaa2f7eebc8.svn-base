<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">

	<div class = "field">
		<div class = "dvLabel">
			<h:outputLabel styleClass="labelsStl" value = "¿Cuántas personas dependen económicamente de ti?*"/>
		</div>
		
		
		
		<div class="dvElementAddres1">
			<div class="selectNuevo">
				<h:selectOneMenu id = "lista_dependants_number" 
								 value      = "#{addMyLoan.naturalperson.dependants_number_id}"  
								 styleClass = "elementStlSelAddress validatorClass selectchange hs_class">
								 
					<f:selectItem itemLabel = "Selecciona..." itemValue = "0" />
					
					<f:selectItems value = "#{addMyLoan.lista_dependants_number}" 
								   var   = "dependant" 
								   itemLabel = "#{dependant.description}" 
								   itemValue = "#{dependant.pk.dependants_number_id}"/>
					
					<p:ajax event    = "change" 
							listener = "#{addMyLoan.listener_dependants_number}" />
				</h:selectOneMenu>
			</div>
		</div>				
	</div>
</ui:composition>