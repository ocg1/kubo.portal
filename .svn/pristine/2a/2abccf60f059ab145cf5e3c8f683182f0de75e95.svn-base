<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:c  = "http://java.sun.com/jsp/jstl/core"
				xmlns:p  = "http://primefaces.org/ui">
	<div align = "right" 
	  		 style = "width: 30px; 
	  		          float: left;">
		<p:commandLink immediate      = "true" 
					   rendered       = "#{summaryRequest.domicilio_actividad.change_control_bean != null and summaryRequest.domicilio_actividad.change_control_bean.hasChange and sessionBean.area != 'I'}" 				  			   
		  			   actionListener = "#{summaryRequest.setListChanges(summaryRequest.domicilio_actividad.change_control_bean)}" 
		  			   oncomplete     = "showPopUpChanges();" 
		  			   style          = "cursor:pointer;">
		  			   
			<h:graphicImage url      = "../resources/img/change-icon.png" 
						    rendered = "#{summaryRequest.domicilio_actividad.change_control_bean != null and summaryRequest.domicilio_actividad.change_control_bean.hasChange}"
							style = "width: 30px; 
									 height: 30px;
									 float: right; 												 
									 margin: 0px 0px 0px;"/>
		</p:commandLink>
	</div>				
</ui:composition>	