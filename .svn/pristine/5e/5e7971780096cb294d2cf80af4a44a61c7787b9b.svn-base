<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:f  = "http://java.sun.com/jsf/core"
				xmlns:p  = "http://primefaces.org/ui">
				
	<h:panelGroup rendered="#{sessionBean.area=='M'}">
					<!-- Sección otro miembro de la familia -->

		<div class="otro_miembro">
		<h:panelGroup rendered="#{summaryRequest.personFamily!=null}">
			<div  class="details4 left">
				<p><strong style="color:#439539;">Familiar que contribuye al ingreso</strong></p>
				<p><strong>#{summaryRequest.personFamily.fullName}</strong></p>
			</div>
	
				<div>			
								
					<div class="details1 left" style="margin-left:0; width: 200px; "> 
						<p><strong>RFC</strong></p>
						<p>#{summaryRequest.personFamily.person.mx_rfc}</p>
					</div>						
						
					<div class="details1 left"  style="margin-left: 0pt; width: 200px;" >
						<p><strong>CURP</strong></p>
						<p>#{summaryRequest.personFamily.person.mx_curp}</p>
					</div>
					
					
						
					<div class="details1 left"  style="margin-left: 0; width: 200px;"> 
						<p><strong>Género</strong></p>
						<p>#{summaryRequest.personFamily.person.gender_id ==1?'Masculino':'Femenino'}</p>
					</div>						
					
					<div class="details1 left"  style="margin-left:0; width: 200px;">
						<p><strong>Fecha de nacimiento</strong></p>
						<p>#{summaryRequest.personFamily.birthday}</p>
					</div>
					
				
														
					<div class="details1 left" style="margin-left: 0pt; width: 200px;" >
						<p><strong>Nacionalidad</strong></p>
						<p>#{summaryRequest.personFamily.nationality}</p>
					</div>			
					
					<div class="details1 left" style="margin-left: 0pt; width: 200px;" >
						<p><strong>Parentesco</strong></p>
						<p>#{summaryRequest.personFamily.relationShip.relationship}</p>
					</div>	
								
		
					<div class="details1 left"  style="margin-left: 0pt; width: 200px;">
						<p><strong>Lugar de nacimiento</strong></p>
						<p>#{summaryRequest.personFamily.countryName}, #{summaryRequest.personFamily.stateName}</p>
					</div>																										
				</div>
						
				
				
				<div  class="details1 left">
					<p><strong>Vivienda</strong></p>
						<p>#{summaryRequest.personFamily.thisAddress}</p>							
				</div>
				
				<div  class="details1 left">
					<p><strong>Actividad económica</strong></p>
					
					<ui:repeat var="listEmployment" value="#{summaryRequest.personFamily.listEmployment}">
						<p>Empleado de #{listEmployment.employer}</p>
					</ui:repeat>
					
					<ui:repeat var="listBusiness" value="#{summaryRequest.personFamily.listBusiness}">
						<p>Empresario del giro "#{listBusiness.bmxEconActivityCat.description}"  por #{listBusiness.years_since_when} #{listBusiness.years_since_when !=1?'años':' año'}</p>
					</ui:repeat>    
				</div>
				
				
						
				<h:panelGroup rendered="#{summaryRequest.personFamily.listEmployment !=null}">
												
				
					
					<p><strong>Datos del empleo</strong></p>
					
					<div class="details1 left"  style="margin-left:0;"> 
						<p><strong>Sueldo total</strong></p>
						<p>
						<h:outputText value="#{summaryRequest.personFamily.incomeWagesSalary}">
							<f:convertNumber maxFractionDigits="0" minFractionDigits="0" currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
						</h:outputText>
						</p>
					</div>						
									
					<div class="details1 left" id="details12" >
						<p><strong>Aporta al ingreso familiar</strong></p>
						<p>
						<h:outputText value="#{summaryRequest.personFamily.incomeOtherFamilyE}">
							<f:convertNumber maxFractionDigits="0" minFractionDigits="0"  currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
						</h:outputText>
						</p>
					</div>
				</h:panelGroup>
				
			
						
				<h:panelGroup rendered="#{summaryRequest.personFamily.listBusiness!=null}">
		
					
					<p><strong>Datos del negocio</strong></p>
					
					<div class="details1 left"  style="margin-left: 0px; width: 260px;"> 
						<p><strong>Ingreso mensual aproximado</strong></p>
						<p>
						<h:outputText value="#{summaryRequest.personFamily.incomeBusinessCompany}">
							<f:convertNumber maxFractionDigits="0" minFractionDigits="0"  currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
						</h:outputText>
						</p>
					</div>						
									
					<div class="details1 left">
						<p><strong>Aporta al ingreso familiar</strong></p>
						<p>
						<h:outputText value="#{summaryRequest.personFamily.incomeOtherFamilyB}">
							<f:convertNumber maxFractionDigits="0" minFractionDigits="0"  currencySymbol="$" type="currency" groupingUsed="true" locale="es_MX"/>									
						</h:outputText>
						</p>
					</div>
				</h:panelGroup>						

		</h:panelGroup>	
		</div>					
	</h:panelGroup>				
</ui:composition>				