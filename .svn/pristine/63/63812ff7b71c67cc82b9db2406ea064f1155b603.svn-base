<ui:composition xmlns    = "http://www.w3.org/1999/xhtml"
				xmlns:h  = "http://java.sun.com/jsf/html"
				xmlns:ui = "http://java.sun.com/jsf/facelets"
				xmlns:p  = "http://primefaces.org/ui">
	<div class="field">
		<div class="dvLabel">
			<h:outputLabel styleClass="labelsStl" value="#{msg.Social_security_number_text}" />
		</div>
		
		<div class="dvElementLength">
			<h:inputText id = "id_social_security" 
						 value      = "#{employment.employment.nss}"
						 tabindex   = "21" 
						 maxlength  = "11" 
						 onkeypress = "return isNumberKey(event);" 
						 styleClass = "elementAddres1 hs_class" >
				<p:ajax event    = "blur" 
						onstart  = "return validateDigitIMSS('uiemp\:#{status.index}\:id_social_security')" 
						listener = "#{addMyLoan.updateEmployment(employment)}" />
			</h:inputText>
			<p:watermark for="id_social_security" value="Escribe"></p:watermark>
		</div>
	</div>				
</ui:composition>				