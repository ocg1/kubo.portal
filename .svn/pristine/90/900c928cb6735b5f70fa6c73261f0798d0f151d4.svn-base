<ui:composition
	xmlns    = "http://www.w3.org/1999/xhtml"
	xmlns:ui = "http://java.sun.com/jsf/facelets"
	xmlns:h  = "http://java.sun.com/jsf/html"
	xmlns:c  = "http://java.sun.com/jsp/jstl/core"	
	xmlns:f  = "http://java.sun.com/jsf/core"
	xmlns:p  = "http://primefaces.org/ui"
	xmlns:pm = "http://primefaces.org/mobile">
		
<!--<c:set var = "vistaMobile" value = "#{sessionBean.vistaMobile}"/>-->
	<c:set var = "vistaMobile" value = "true"/>
	
	<h:body>
		<h:form id = "frm_datos_personales_genero">
			<c:choose>
				<c:when test = "#{vistaMobile}">
				    <p:selectOneRadio id       = "genero"	    				   
				    				  disabled = "#{navigationBean.disabledComponent('genero')}"
				    				  value    = "#{basicData.genero}">
				        <f:selectItem itemLabel = "Masculino" itemValue = "1" />
				        <f:selectItem itemLabel = "Femenino"  itemValue = "2" />
				 		<p:ajax listener = "#{basicData.saveData}"
				 				event    = "change" />
					</p:selectOneRadio>	
				</c:when>
				
				<c:otherwise>
				
					<!--
					<h:selectOneRadio value = "#{basicData.naturalPerson.gender_id}"				      	   
					   <p:ajax listener = "#{basicData.getCURP}" 
					   		   update   = "rfc curp" />
					</h:selectOneRadio>
					-->
					
					<p:selectOneRadio id         = "genero"	    				   
				    				  disabled   = "#{navigationBean.disabledComponent('genero')}"
				    				  value      = "#{basicData.genero}"
				    				  styleClass = "radio elementStlLbl validatorClass requiredVerify">
				  		<f:selectItem itemLabel = "Masculino" itemValue = "1" />
				        <f:selectItem itemLabel = "Femenino"  itemValue = "2" />
				 		<p:ajax listener   = "#{basicData.saveData}"
				 				event      = "click"
				 				oncomplete = "fieldCount();" />
					</p:selectOneRadio>	
				</c:otherwise>
			</c:choose>	
		</h:form>
	</h:body>
</ui:composition>	